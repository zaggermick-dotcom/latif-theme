{%- comment -%}
  BLOC TRUSTPILOT - Pour utilisation dans les sections
{%- endcomment -%}

{%- liquid
  assign rating = block.settings.rating | default: 4.9
  assign reviews_count = block.settings.reviews_count | default: 2500
  assign style = block.settings.style | default: 'default'
  assign size = block.settings.size | default: 'medium'
  assign show_logo = block.settings.show_logo
  assign show_count = block.settings.show_count
  assign show_label = block.settings.show_label
  assign show_rating_text = block.settings.show_rating_text
  assign color_stars = block.settings.color_stars | default: '#00B67A'
  assign color_empty = block.settings.color_empty | default: '#DCDCE6'
  assign color_text = block.settings.color_text | default: '#191919'
  assign color_bg_widget = block.settings.color_bg_widget | default: '#f7f7f7'
  assign alignment = block.settings.alignment | default: 'left'
  assign link_url = block.settings.link_url
  assign margin_top = block.settings.margin_top | default: 8
  assign margin_bottom = block.settings.margin_bottom | default: 16
  
  case size
    when 'small'
      assign star_size = 18
      assign star_gap = 2
      assign font_size_rating = 14
      assign font_size_count = 11
      assign font_size_label = 9
      assign logo_width = 75
      assign widget_gap = 8
      assign padding_box = '12px 16px'
    when 'large'
      assign star_size = 30
      assign star_gap = 4
      assign font_size_rating = 20
      assign font_size_count = 15
      assign font_size_label = 11
      assign logo_width = 120
      assign widget_gap = 14
      assign padding_box = '24px 32px'
    else
      assign star_size = 24
      assign star_gap = 3
      assign font_size_rating = 17
      assign font_size_count = 13
      assign font_size_label = 10
      assign logo_width = 100
      assign widget_gap = 10
      assign padding_box = '18px 24px'
  endcase
  
  assign full_stars = rating | floor
  assign decimal = rating | modulo: 1
  assign has_half = false
  if decimal >= 0.25 and decimal < 0.75
    assign has_half = true
  elsif decimal >= 0.75
    assign full_stars = full_stars | plus: 1
  endif
  assign half_star_position = full_stars | plus: 1
-%}

<style>
  .tps-block-{{ block.id }} {
    margin-top: {{ margin_top }}px;
    margin-bottom: {{ margin_bottom }}px;
    display: flex;
    {% case alignment %}
      {% when 'left' %}justify-content: flex-start;
      {% when 'right' %}justify-content: flex-end;
      {% else %}justify-content: center;
    {% endcase %}
  }
  .tps-block-{{ block.id }} .tps-widget {
    display: inline-flex;
    align-items: center;
    gap: {{ widget_gap }}px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    text-decoration: none;
    color: inherit;
    {% if style == 'box' or style == 'detailed' %}
      flex-direction: column;
      text-align: center;
      background: {{ color_bg_widget }};
      padding: {{ padding_box }};
      border-radius: 12px;
      {% if style == 'box' %}box-shadow: 0 4px 20px rgba(0,0,0,0.08);{% endif %}
      {% if style == 'detailed' %}border: 1px solid rgba(0,0,0,0.08);{% endif %}
    {% endif %}
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  {% if link_url != blank %}
  .tps-block-{{ block.id }} .tps-widget:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  {% endif %}
  .tps-block-{{ block.id }} .tps-logo svg {
    width: {{ logo_width }}px;
    height: auto;
  }
  .tps-block-{{ block.id }} .tps-stars {
    display: flex;
    align-items: center;
    gap: {{ star_gap }}px;
  }
  .tps-block-{{ block.id }} .tps-star {
    width: {{ star_size }}px;
    height: {{ star_size }}px;
    background: {{ color_stars }};
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 2px;
  }
  .tps-block-{{ block.id }}.tps--minimal .tps-star {
    background: transparent;
  }
  .tps-block-{{ block.id }} .tps-star svg {
    width: {{ star_size | times: 0.6 }}px;
    height: {{ star_size | times: 0.6 }}px;
    fill: #ffffff;
  }
  .tps-block-{{ block.id }}.tps--minimal .tps-star svg {
    fill: {{ color_stars }};
    width: {{ star_size | times: 0.9 }}px;
    height: {{ star_size | times: 0.9 }}px;
  }
  .tps-block-{{ block.id }} .tps-star--half {
    background: linear-gradient(90deg, {{ color_stars }} 50%, {{ color_empty }} 50%);
  }
  .tps-block-{{ block.id }} .tps-star--empty {
    background: {{ color_empty }};
  }
  .tps-block-{{ block.id }}.tps--minimal .tps-star--empty {
    background: transparent;
  }
  .tps-block-{{ block.id }}.tps--minimal .tps-star--empty svg {
    fill: {{ color_empty }};
  }
  .tps-block-{{ block.id }} .tps-info {
    display: flex;
    {% if style == 'box' or style == 'detailed' %}
      flex-direction: column;
      align-items: center;
    {% else %}
      flex-direction: row;
      align-items: center;
      gap: 8px;
    {% endif %}
    line-height: 1.3;
  }
  .tps-block-{{ block.id }} .tps-rating {
    font-size: {{ font_size_rating }}px;
    font-weight: 700;
    color: {{ color_text }};
  }
  .tps-block-{{ block.id }} .tps-count {
    font-size: {{ font_size_count }}px;
    color: {{ color_text }};
    opacity: 0.7;
  }
  .tps-block-{{ block.id }} .tps-label {
    font-size: {{ font_size_label }}px;
    color: {{ color_text }};
    opacity: 0.5;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 4px;
  }
  .tps-block-{{ block.id }} .tps-separator {
    color: {{ color_text }};
    opacity: 0.3;
  }
  @media screen and (max-width: 749px) {
    .tps-block-{{ block.id }} .tps-logo svg { width: {{ logo_width | times: 0.8 }}px; }
    .tps-block-{{ block.id }} .tps-star {
      width: {{ star_size | times: 0.85 | round }}px;
      height: {{ star_size | times: 0.85 | round }}px;
    }
  }
</style>

