        </svg>
      </div>
    {%- endif -%}
    
    <div class="tps-stars" role="img" aria-label="Note: {{ rating }} sur 5 etoiles">
      {%- for i in (1..5) -%}
        {%- if i <= full_stars -%}
          <span class="tps-star"><svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg></span>
        {%- elsif has_half and i == half_star_position -%}
          <span class="tps-star tps-star--half"><svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg></span>
        {%- else -%}
          <span class="tps-star tps-star--empty"><svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg></span>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- if show_rating_text or show_count or show_label -%}
      <div class="tps-info">
        {%- if show_rating_text -%}<span class="tps-rating">{{ rating }}/5</span>{%- endif -%}
        {%- if show_rating_text and show_count and style != 'box' and style != 'detailed' -%}<span class="tps-separator">â€¢</span>{%- endif -%}
        {%- if show_count -%}<span class="tps-count">{{ reviews_count }}+ avis</span>{%- endif -%}
        {%- if show_label -%}<span class="tps-label">Base sur Trustpilot</span>{%- endif -%}
      </div>
    {%- endif -%}
    
  {% if link_url != blank %}</a>{% else %}</div>{% endif %}
</div>