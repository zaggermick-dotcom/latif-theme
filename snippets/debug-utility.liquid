{%- comment -%}
  Debug utility for theme development
  Only logs in Shopify Theme Editor (designMode)
  Note: Uses ES6 spread operator - requires modern browser support (IE11+)
{%- endcomment -%}

<script>
  window.themeDebug = {
    log: function() {
      if (window.Shopify && window.Shopify.designMode) {
        console.log.apply(console, ['[Theme]'].concat(Array.prototype.slice.call(arguments)));
      }
    },
    warn: function() {
      if (window.Shopify && window.Shopify.designMode) {
        console.warn.apply(console, ['[Theme]'].concat(Array.prototype.slice.call(arguments)));
      }
    },
    error: function() {
      // Always log errors, but add context
      console.error.apply(console, ['[Theme Error]'].concat(Array.prototype.slice.call(arguments)));
    }
  };
</script>
