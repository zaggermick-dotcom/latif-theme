      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 999;
      pointer-events: none;
      background: rgb(var(--color-background));
      animation-duration: var(--transitions-delay);
      animation-timing-function: ease-in-out;
    }

    @keyframes fade-out {
      from { opacity: 1; }
      to { opacity: 0; }
    }

