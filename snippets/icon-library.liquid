        <span class="tps-star tps-star--empty" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        </span>
      {%- endif -%}
    {%- endfor -%}
  </div>
  
  {%- # Informations -%}
  {%- if show_rating_text or show_count or show_label -%}
    <div class="tps-info">
      {%- if show_rating_text -%}
        <span class="tps-rating">{{ rating }}/5</span>
      {%- endif -%}
      
      {%- if style == 'inline' or style == 'minimal' -%}
        {%- if show_rating_text and show_count -%}
          <span class="tps-separator">•</span>
        {%- endif -%}
      {%- endif -%}
      
      {%- if show_count -%}
        <span class="tps-count">{{ reviews_count }}+ avis</span>
      {%- endif -%}
      
      {%- if show_label -%}
        <span class="tps-label">Basé sur Trustpilot</span>
      {%- endif -%}
    </div>
  {%- endif -%}
  
