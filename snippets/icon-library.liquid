      </svg>
    </div>
  {%- endif -%}
  
  {%- # Étoiles -%}
  <div class="tps-stars" role="img" aria-label="Note: {{ rating }} sur 5 étoiles">
    {%- for i in (1..5) -%}
      {%- if i <= full_stars -%}
        <span class="tps-star" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        </span>
      {%- elsif has_half and i == full_stars | plus: 1 -%}
        <span class="tps-star tps-star--half" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        </span>
