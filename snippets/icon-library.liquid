{%- comment -%}
  ═══════════════════════════════════════════════════════════════════════════
  TRUSTPILOT STARS - Widget Étoiles Trustpilot Réutilisable
  ═══════════════════════════════════════════════════════════════════════════
  
  Utilisation:
  {% render 'trustpilot-stars' %}
  {% render 'trustpilot-stars', rating: 4.9, reviews_count: 2500 %}
  {% render 'trustpilot-stars', rating: 4.8, style: 'compact', size: 'small' %}
  {% render 'trustpilot-stars', rating: 5, style: 'detailed', show_logo: true %}
  
  Paramètres:
  - rating............. Note sur 5 (défaut: 4.9)
  - reviews_count...... Nombre d'avis (défaut: 2500)
  - style.............. 'default', 'compact', 'minimal', 'detailed', 'box', 'inline'
  - size............... 'small', 'medium', 'large'
  - show_logo.......... Afficher logo Trustpilot (true/false, défaut: true)
  - show_count......... Afficher nombre d'avis (true/false, défaut: true)
  - show_label......... Afficher "Basé sur Trustpilot" (true/false, défaut: false)
  - show_rating_text... Afficher "4.9/5" (true/false, défaut: true)
  - color_stars........ Couleur des étoiles (défaut: #00B67A)
  - color_bg........... Couleur fond étoiles (défaut: #00B67A)
  - color_empty........ Couleur étoiles vides (défaut: #DCDCE6)
  - color_text......... Couleur du texte (défaut: #191919)
  - alignment.......... 'left', 'center', 'right' (défaut: center)
  - link_url........... URL de redirection (optionnel)
  - class.............. Classes CSS additionnelles (optionnel)
  
{%- endcomment -%}

{%- liquid
  assign rating = rating | default: 4.9
  assign reviews_count = reviews_count | default: 2500
  assign style = style | default: 'default'
  assign size = size | default: 'medium'
  assign show_logo = show_logo | default: true
  assign show_count = show_count | default: true
  assign show_label = show_label | default: false
  assign show_rating_text = show_rating_text | default: true
  assign color_stars = color_stars | default: '#00B67A'
  assign color_bg = color_bg | default: '#00B67A'
  assign color_empty = color_empty | default: '#DCDCE6'
  assign color_text = color_text | default: '#191919'
  assign alignment = alignment | default: 'center'
  assign link_url = link_url | default: ''
  assign custom_class = class | default: ''
  
  assign unique_id = 'tps-' | append: section.id | append: '-' | append: 'now' | date: '%N'
  
  case size
    when 'small'
      assign star_size = 18
      assign star_gap = 2
      assign font_size_rating = 14
      assign font_size_count = 11
      assign font_size_label = 9
      assign logo_width = 75
      assign widget_gap = 8
      assign padding_box = '12px 16px'
    when 'large'
      assign star_size = 30
      assign star_gap = 4
      assign font_size_rating = 20
      assign font_size_count = 15
      assign font_size_label = 11
      assign logo_width = 120
      assign widget_gap = 14
      assign padding_box = '24px 32px'
    else
      assign star_size = 24
      assign star_gap = 3
      assign font_size_rating = 17
      assign font_size_count = 13
      assign font_size_label = 10
      assign logo_width = 100
      assign widget_gap = 10
      assign padding_box = '18px 24px'
  endcase
  
  assign full_stars = rating | floor
  assign decimal = rating | modulo: 1
  assign has_half = false
  if decimal >= 0.25 and decimal < 0.75
    assign has_half = true
  elsif decimal >= 0.75
    assign full_stars = full_stars | plus: 1
  endif
  assign empty_stars = 5 | minus: full_stars
  if has_half
    assign empty_stars = empty_stars | minus: 1
  endif
-%}

<style>
  .tps-{{ unique_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ widget_gap }}px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    text-decoration: none;
    color: inherit;
    {% case alignment %}
      {% when 'left' %}justify-content: flex-start;
      {% when 'right' %}justify-content: flex-end;
      {% else %}justify-content: center;
    {% endcase %}
    {% if style == 'box' or style == 'detailed' %}
      flex-direction: column;
      text-align: center;
    {% endif %}
  }
  
  {% if link_url != blank %}
  .tps-{{ unique_id }}:hover {
    opacity: 0.9;
  }
  {% endif %}
  
  /* Style Variations */
  .tps-{{ unique_id }}.tps--detailed,
  .tps-{{ unique_id }}.tps--box {
    background: #f7f7f7;
    padding: {{ padding_box }};
    border-radius: 12px;
    border: 1px solid #e5e5e5;
  }
  
  .tps-{{ unique_id }}.tps--box {
    background: #ffffff;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    border: none;
  }
  
  .tps-{{ unique_id }}.tps--compact {
    gap: {{ widget_gap | divided_by: 2 }}px;
  }
  
  .tps-{{ unique_id }}.tps--minimal {
    gap: 6px;
  }
  
  .tps-{{ unique_id }}.tps--inline {
    flex-wrap: wrap;
  }
  
  /* Logo Trustpilot */
  .tps-{{ unique_id }} .tps-logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }
  
  .tps-{{ unique_id }} .tps-logo svg {
    width: {{ logo_width }}px;
    height: auto;
  }
  
  /* Étoiles Container */
  .tps-{{ unique_id }} .tps-stars {
    display: flex;
    align-items: center;
    gap: {{ star_gap }}px;
  }
  
  /* Étoile individuelle */
  .tps-{{ unique_id }} .tps-star {
    width: {{ star_size }}px;
    height: {{ star_size }}px;
    background: {{ color_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star {
    background: transparent;
  }
  
  .tps-{{ unique_id }} .tps-star svg {
    width: {{ star_size | times: 0.6 }}px;
    height: {{ star_size | times: 0.6 }}px;
    fill: #ffffff;
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star svg {
    fill: {{ color_stars }};
    width: {{ star_size | times: 0.9 }}px;
    height: {{ star_size | times: 0.9 }}px;
  }
  
  /* Étoile demi-remplie */
  .tps-{{ unique_id }} .tps-star--half {
    background: linear-gradient(90deg, {{ color_bg }} 50%, {{ color_empty }} 50%);
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star--half {
    background: transparent;
    position: relative;
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star--half svg {
    fill: {{ color_empty }};
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star--half::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 50%;
    height: 100%;
    overflow: hidden;
  }
  
  /* Étoile vide */
  .tps-{{ unique_id }} .tps-star--empty {
    background: {{ color_empty }};
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star--empty {
    background: transparent;
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-star--empty svg {
    fill: {{ color_empty }};
  }
  
  /* Informations */
  .tps-{{ unique_id }} .tps-info {
    display: flex;
    flex-direction: column;
    {% if style == 'box' or style == 'detailed' %}
      align-items: center;
    {% else %}
      align-items: flex-start;
    {% endif %}
    gap: 2px;
    line-height: 1.3;
  }
  
  .tps-{{ unique_id }}.tps--minimal .tps-info,
  .tps-{{ unique_id }}.tps--inline .tps-info {
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }
  
  .tps-{{ unique_id }} .tps-rating {
    font-size: {{ font_size_rating }}px;
    font-weight: 700;
    color: {{ color_text }};
  }
  
  .tps-{{ unique_id }} .tps-count {
    font-size: {{ font_size_count }}px;
    color: {{ color_text }};
    opacity: 0.7;
  }
  
  .tps-{{ unique_id }} .tps-label {
    font-size: {{ font_size_label }}px;
    color: {{ color_text }};
    opacity: 0.5;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 4px;
  }
  
  .tps-{{ unique_id }} .tps-separator {
    color: {{ color_text }};
    opacity: 0.3;
  }
</style>

