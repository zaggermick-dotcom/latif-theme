{%- liquid
  assign layout_width = section.settings.layout_width | default: 'normal'
  assign container_class = 'page-width'
  if layout_width == 'narrow'
    assign container_class = 'page-width-narrow'
  elsif layout_width == 'full-padded'
    assign container_class = 'page-width-full-padded'
  elsif layout_width == 'full'
    assign container_class = ''
  endif

  assign bgImage = section.settings.image_bg_colored
  assign bgImageMobile = section.settings.image_bg_colored_mobile
  if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank
    render 'cut-colored'
  endif
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

{%- render 'separator-top', section: section -%}

<div 
 id="{{ section.settings.section_id }}"
 class="color-{{ section.settings.color_palette }} reviews-two section-{{ section.id }}-padding{% if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank %} cut-colored-section{% endif %}"
 data-section-id="{{ section.id }}">
  <div class="container container--{{ section.settings.layout_width }}">
    {%- liquid
      for block in section.blocks
        if block.type == "picto"
          render "pictogram", block: block
        endif
      endfor
    -%}

    {%- if section.settings.heading != blank -%}
      {%- render 'heading',
        alignment: 'center',
        heading: section.settings.heading,
        heading_style: section.settings.heading_style,
        enable_animations: section.settings.enable_animations,
        animation: section.settings.animation
      -%}
    {%- endif -%}

    {% if section.settings.trustpilot_info %}
      <div class="reviews-two__trustpilot text-center"
        {% if section.settings.enable_animations %}
          data-aos="{{ section.settings.animation }}"
          data-aos-delay="150"
        {% endif %}>
        <div class="reviews-two__trustpilot-logo">
          Truspilot {{ section.settings.rating }} / 5
          <div class="reviews-two__stars">
            {% for i in (1..5) %}
              <span class="reviews-two__star">
                {%- render 'icon-trustpilot' -%}
              </span>
            {% endfor %}
          </div>
        </div>
        <div class="reviews-two__trustpilot-count">
          basé sur {{ section.settings.reviews_count }} avis
        </div>
      </div>
    {% endif %}

    <div class="{{ container_class }}">
      <div class="reviews-two__swiper-container">
        <div class="reviews-two__slider swiper swiper-pagination--{{ section.settings.swiper_pagination_style }} pagination__color--{{ section.settings.swiper_pagination_color }}"
          {% if section.settings.enable_animations %}
            data-aos="{{ section.settings.animation }}"
            data-aos-delay="300"
          {% endif %}>
          <div class="swiper-wrapper">
            {%- for block in section.blocks -%}
              {%- if block.type == 'testimonial' -%}
                <div class="reviews-two__slide swiper-slide" {{ block.shopify_attributes }}>
                  <div class="reviews-two__content">
                    <div class="reviews-two__stars">
                      {% for i in (1..block.settings.rating) %}
                        <span class="reviews-two__star">
                          {%- render 'icon-trustpilot' -%}
                        </span>
                      {% endfor %}
                    </div>
                    
                    <h3 class="reviews-two__subtitle h4">
                      {{ block.settings.title | escape }}
                    </h3>

                    <div class="reviews-two__text rte">
                      {{ block.settings.text }}
                    </div>

                    <div class="reviews-two__author">
                      {{ block.settings.author_name }} - {{ block.settings.author_age }} ans
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>

          {% unless section.settings.swiper_navigation_style == 'none' %}
            <div
              class="
                swiper-button-prev navigation__style--{{ section.settings.swiper_navigation_style }}
                navigation__color--{{ section.settings.swiper_navigation_color }}
              "
            ></div>
            <div
              class="
                swiper-button-next navigation__style--{{ section.settings.swiper_navigation_style }}
                navigation__color--{{ section.settings.swiper_navigation_color }}
              "
            ></div>
          {% endunless %}
          {%- if section.settings.swiper_pagination_style != 'none' -%}
            <div class="reviews-two__pagination swiper-pagination"></div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

{{ 'swiper.js' | asset_url | script_tag }}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.reviews-two__slider', {
      slidesPerView: 1.5,
      centeredSlides: true,
      spaceBetween: 30,
      loop: true,
      loopedSlides: {{ section.blocks | where: "type", "testimonial" | size | times: 2 }},
      rewind: false,
      speed: 500,
      watchSlidesProgress: true,
      observer: true,
      observeParents: true,
      roundLengths: true,
      loopAdditionalSlides: 2,
      autoplay: {
        delay: {{ section.settings.speed | times: 1000 }},
        enabled: {{ section.settings.autoplay }},
        disableOnInteraction: false,
        pauseOnMouseEnter: true
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
        enabled: {{ section.settings.navigation }}
      },
      pagination: {
        el: '.reviews-two__pagination',
        enabled: {% if section.settings.swiper_pagination_style == 'none' %} false {% else %} true {% endif %},
        clickable: true,
        type: 'bullets'
      },
      breakpoints: {
        750: {
          slidesPerView: 4.2,
          initialSlide: 1
        }
      },
      on: {
        beforeInit: function (swiper) {
          const slides = swiper.el.querySelectorAll('.swiper-slide');
          const numberOfSlides = slides.length;
          
          // Dupliquer la séquence de slides 3 fois pour le loop
          for (let i = 0; i < 3; i++) {
            slides.forEach(slide => {
              const clone = slide.cloneNode(true);
              clone.classList.add('swiper-slide-duplicate');
              swiper.el.querySelector('.swiper-wrapper').appendChild(clone);
            });
          }
        },
                  init: function (swiper) {
            const realSlidesCount = {{ section.blocks | where: "type", "testimonial" | size }};
            
            // Configurer la pagination pour qu'elle reflète la position réelle
            swiper.on('slideChange', function () {
              const bullets = swiper.el.querySelectorAll('.swiper-pagination-bullet');
              const realIndex = swiper.realIndex % realSlidesCount; // Utiliser modulo pour cycler entre les bullets
              
              bullets.forEach((bullet, index) => {
                if (index >= realSlidesCount) {
                  bullet.style.display = 'none';
                } else {
                  bullet.classList.toggle('swiper-pagination-bullet-active', index === realIndex);
                }
              });
            });
            
            // Déclencher une première fois pour initialiser
            swiper.emit('slideChange');
        }
      }
    });
  });
</script>

