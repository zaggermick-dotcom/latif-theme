{%- # NOUVEAU: Scripts pour Promo Bar et Trust Badges -%}
<script>
(function() {
  'use strict';
  
  var sectionId = '{{ section.id }}';
  var promoBar = document.getElementById('PromoBar-' + sectionId);
  var promoClose = document.getElementById('PromoClose-' + sectionId);
  var promoMarquee = document.getElementById('PromoMarquee-' + sectionId);
  
  // Promo Bar - Fermer
  if (promoClose && promoBar) {
    promoClose.addEventListener('click', function() {
      promoBar.classList.add('hidden');
      sessionStorage.setItem('promoBarClosed_' + sectionId, 'true');
    });
    
    if (sessionStorage.getItem('promoBarClosed_' + sectionId) === 'true') {
      promoBar.classList.add('hidden');
    }
  }
  
  // Promo Bar - Pause au survol
  {% if section.settings.promo_pause_hover and section.settings.promo_scrolling %}
  if (promoMarquee && promoBar) {
    promoBar.addEventListener('mouseenter', function() {
      promoMarquee.classList.add('paused');
    });
    promoBar.addEventListener('mouseleave', function() {
      promoMarquee.classList.remove('paused');
    });
  }
  {% endif %}
  
  // Timer Promo
  {% if section.settings.show_promo_bar and section.settings.show_promo_timer and section.settings.promo_scrolling == false %}
  var timerElement = document.getElementById('PromoTimerText-' + sectionId);
  if (timerElement) {
    var duration = {{ section.settings.promo_timer_hours | default: 24 }} * 3600 + {{ section.settings.promo_timer_minutes | default: 0 }} * 60;
    var storageKey = 'promoTimer_' + sectionId;
    var savedTime = localStorage.getItem(storageKey);
    var endTime;
    
    if (savedTime) {
      endTime = parseInt(savedTime, 10);
    } else {
      endTime = Date.now() + (duration * 1000);
      localStorage.setItem(storageKey, endTime.toString());
    }

    function updateTimer() {
      var now = Date.now();
      var remaining = Math.max(0, Math.floor((endTime - now) / 1000));
      
      var hours = Math.floor(remaining / 3600);
      var minutes = Math.floor((remaining % 3600) / 60);
      var seconds = remaining % 60;
      
      timerElement.textContent = 
        String(hours).padStart(2, '0') + ':' + 
        String(minutes).padStart(2, '0') + ':' + 
        String(seconds).padStart(2, '0');
      
      if (remaining > 0) {
        requestAnimationFrame(function() {
          setTimeout(updateTimer, 1000);
        });
      } else {
        localStorage.removeItem(storageKey);
        endTime = Date.now() + (duration * 1000);
        localStorage.setItem(storageKey, endTime.toString());
        updateTimer();
      }
    }
    updateTimer();
  }
  {% endif %}

  // Sticky scroll-up behavior
  {% if section.settings.sticky_header_type == 'on-scroll-up' %}
  var lastScroll = 0;
  var scrollThreshold = 100;
  var ticking = false;
  var sectionHeader = document.querySelector('.section-header');
  
  function onScroll() {
    var currentScroll = window.pageYOffset || document.documentElement.scrollTop;
    
    if (currentScroll > lastScroll && currentScroll > scrollThreshold) {
      sectionHeader.classList.add('header-hidden');
    } else {
      sectionHeader.classList.remove('header-hidden');
    }
    
    lastScroll = currentScroll <= 0 ? 0 : currentScroll;
    ticking = false;
  }
  
  window.addEventListener('scroll', function() {
    if (!ticking) {
      requestAnimationFrame(onScroll);
      ticking = true;
    }
  }, { passive: true });
  {% endif %}

})();
</script>
