  .vip-teaser-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }
  
  .vip-teaser-container {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  
  .vip-teaser-icon {
    color: #6c757d;
    margin-bottom: 20px;
  }
  
  .vip-teaser-heading {
    color: #343a40;
    margin-bottom: 10px;
  }
  
  .vip-teaser-text {
    color: #6c757d;
    margin-bottom: 20px;
  }
</style>
