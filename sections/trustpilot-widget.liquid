{%- comment -%}
  ═══════════════════════════════════════════════════════════════════════════
  SECTION TRUSTPILOT WIDGET
  Disponible comme SECTION et comme BLOC dans d'autres sections
  ═══════════════════════════════════════════════════════════════════════════
{%- endcomment -%}

{%- liquid
  assign rating = section.settings.rating
  assign reviews_count = section.settings.reviews_count
  assign style = section.settings.style
  assign size = section.settings.size
  assign show_logo = section.settings.show_logo
  assign show_count = section.settings.show_count
  assign show_label = section.settings.show_label
  assign show_rating_text = section.settings.show_rating_text
  assign color_stars = section.settings.color_stars
  assign color_empty = section.settings.color_empty
  assign color_text = section.settings.color_text
  assign color_bg_widget = section.settings.color_bg_widget
  assign alignment = section.settings.alignment
  assign link_url = section.settings.link_url
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  
  case size
    when 'small'
      assign star_size = 18
      assign star_gap = 2
      assign font_size_rating = 14
      assign font_size_count = 11
      assign font_size_label = 9
      assign logo_width = 75
      assign widget_gap = 8
      assign padding_box = '12px 16px'
    when 'large'
      assign star_size = 30
      assign star_gap = 4
      assign font_size_rating = 20
      assign font_size_count = 15
      assign font_size_label = 11
      assign logo_width = 120
      assign widget_gap = 14
      assign padding_box = '24px 32px'
    else
      assign star_size = 24
      assign star_gap = 3
      assign font_size_rating = 17
      assign font_size_count = 13
      assign font_size_label = 10
      assign logo_width = 100
      assign widget_gap = 10
      assign padding_box = '18px 24px'
  endcase
  
  assign full_stars = rating | floor
  assign decimal = rating | modulo: 1
  assign has_half = false
  if decimal >= 0.25 and decimal < 0.75
    assign has_half = true
  elsif decimal >= 0.75
    assign full_stars = full_stars | plus: 1
  endif
  assign empty_stars = 5 | minus: full_stars
  if has_half
    assign empty_stars = empty_stars | minus: 1
  endif
  assign half_star_position = full_stars | plus: 1
-%}

<style>
  .tps-section-{{ section.id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  .tps-container-{{ section.id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    {% case alignment %}
      {% when 'left' %}align-items: flex-start;
      {% when 'right' %}align-items: flex-end;
      {% else %}align-items: center;
    {% endcase %}
  }
  .tps-widget-{{ section.id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ widget_gap }}px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    text-decoration: none;
    color: inherit;
    {% if style == 'box' or style == 'detailed' %}
      flex-direction: column;
      text-align: center;
    {% endif %}
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  {% if link_url != blank %}
  .tps-widget-{{ section.id }}:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  {% endif %}
  .tps-widget-{{ section.id }}.tps--detailed {
    background: {{ color_bg_widget }};
    padding: {{ padding_box }};
    border-radius: 12px;
    border: 1px solid rgba(0,0,0,0.08);
  }
  .tps-widget-{{ section.id }}.tps--box {
    background: {{ color_bg_widget }};
    padding: {{ padding_box }};
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }
  .tps-widget-{{ section.id }}.tps--compact { gap: {{ widget_gap | divided_by: 2 }}px; }
  .tps-widget-{{ section.id }}.tps--minimal { gap: 6px; }
  .tps-widget-{{ section.id }}.tps--inline { flex-wrap: wrap; }
  .tps-widget-{{ section.id }} .tps-logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }
  .tps-widget-{{ section.id }} .tps-logo svg {
    width: {{ logo_width }}px;
    height: auto;
  }
  .tps-widget-{{ section.id }} .tps-stars {
    display: flex;
    align-items: center;
    gap: {{ star_gap }}px;
  }
  .tps-widget-{{ section.id }} .tps-star {
    width: {{ star_size }}px;
    height: {{ star_size }}px;
    background: {{ color_stars }};
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    border-radius: 2px;
  }
  .tps-widget-{{ section.id }}.tps--minimal .tps-star { background: transparent; }
  .tps-widget-{{ section.id }} .tps-star svg {
    width: {{ star_size | times: 0.6 }}px;
    height: {{ star_size | times: 0.6 }}px;
    fill: #ffffff;
  }
  .tps-widget-{{ section.id }}.tps--minimal .tps-star svg {
    fill: {{ color_stars }};
    width: {{ star_size | times: 0.9 }}px;
    height: {{ star_size | times: 0.9 }}px;
  }
  .tps-widget-{{ section.id }} .tps-star--half {
    background: linear-gradient(90deg, {{ color_stars }} 50%, {{ color_empty }} 50%);
  }
  .tps-widget-{{ section.id }}.tps--minimal .tps-star--half svg { fill: {{ color_empty }}; }
  .tps-widget-{{ section.id }} .tps-star--empty { background: {{ color_empty }}; }
  .tps-widget-{{ section.id }}.tps--minimal .tps-star--empty { background: transparent; }
  .tps-widget-{{ section.id }}.tps--minimal .tps-star--empty svg { fill: {{ color_empty }}; }
  .tps-widget-{{ section.id }} .tps-info {
    display: flex;
    flex-direction: column;
    {% if style == 'box' or style == 'detailed' %}align-items: center;{% else %}align-items: flex-start;{% endif %}
    gap: 2px;
    line-height: 1.3;
  }
  .tps-widget-{{ section.id }}.tps--minimal .tps-info,
  .tps-widget-{{ section.id }}.tps--inline .tps-info {
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }
  .tps-widget-{{ section.id }} .tps-rating {
    font-size: {{ font_size_rating }}px;
    font-weight: 700;
    color: {{ color_text }};
  }
  .tps-widget-{{ section.id }} .tps-count {
    font-size: {{ font_size_count }}px;
    color: {{ color_text }};
    opacity: 0.7;
  }
  .tps-widget-{{ section.id }} .tps-label {
    font-size: {{ font_size_label }}px;
    color: {{ color_text }};
    opacity: 0.5;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 4px;
  }
  .tps-widget-{{ section.id }} .tps-separator {
    color: {{ color_text }};
    opacity: 0.3;
  }
  .tps-section-{{ section.id }} .tps-section-title {
    text-align: {{ alignment }};
    margin-bottom: 20px;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: {{ color_text }};
  }
  @media screen and (max-width: 749px) {
    .tps-section-{{ section.id }} {
      padding-top: {{ padding_top | times: 0.7 | round }}px;
      padding-bottom: {{ padding_bottom | times: 0.7 | round }}px;
    }
    .tps-widget-{{ section.id }} .tps-logo svg { width: {{ logo_width | times: 0.8 }}px; }
    .tps-widget-{{ section.id }} .tps-star {
      width: {{ star_size | times: 0.85 | round }}px;
      height: {{ star_size | times: 0.85 | round }}px;
    }
    .tps-widget-{{ section.id }} .tps-star svg {
      width: {{ star_size | times: 0.5 | round }}px;
      height: {{ star_size | times: 0.5 | round }}px;
    }
  }
</style>

<section class="tps-section-{{ section.id }}">
  <div class="tps-container-{{ section.id }}">
    {%- if section.settings.section_title != blank -%}
      <h2 class="tps-section-title">{{ section.settings.section_title }}</h2>
    {%- endif -%}

    {% if link_url != blank %}<a href="{{ link_url }}" target="_blank" rel="noopener noreferrer" {% else %}<div {% endif %}
      class="tps-widget-{{ section.id }} tps--{{ style }}"
      {% if link_url != blank %}aria-label="Voir nos avis sur Trustpilot"{% endif %}
    >
      {%- if show_logo and style != 'minimal' and style != 'compact' and style != 'inline' -%}
