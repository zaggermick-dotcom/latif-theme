{{ 'component-reviews.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sectionId = section.id | remove: '-'
  assign enable_animations = section.settings.enable_animations
  assign animation = section.settings.animation
  assign layout = section.settings.layout

  if section.settings.preshot_swiper and layout == 'swiper'
    assign slidesPerViewDesktop = section.settings.slides_on_desktop | plus: 0.4
    assign slidesPerViewTablet = section.settings.slides_on_tablet | plus: 0.4
    assign slidesPerViewMobile = section.settings.slides_on_mobile | plus: 0.4
  else
    assign slidesPerViewDesktop = section.settings.slides_on_desktop
    assign slidesPerViewTablet = section.settings.slides_on_tablet
    assign slidesPerViewMobile = section.settings.slides_on_mobile
  endif

  assign bgImage = section.settings.image_bg_colored
  assign bgImageMobile = section.settings.image_bg_colored_mobile
  if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank
    render 'cut-colored'
  endif
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #reviews__{{ sectionId }} .reviews__grid .reviews__block:nth-child(-n+{{ section.settings.visible_grid_blocks }}) {
    display: block;
  }
{%- endstyle -%}

{%- render 'separator-top', section: section -%}

<div
  id="{{ section.settings.section_id }}"
  class="color-{{ section.settings.color_palette }} section-{{ section.id }}-padding{% if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank %} cut-colored-section{% endif %}"
  data-section-id="{{ section.id }}"
>
  <div class="container container--{{ section.settings.layout_width }}">
    {%- liquid
      for block in section.blocks
        if block.type == 'picto'
          render 'pictogram', block: block
        endif
      endfor
    -%}

    <div class="reviews">
      {%- liquid
        if section.settings.write_review_enable
          assign alignement = 'medium-up-left small-' | append: section.settings.alignment
        else
          assign alignement = section.settings.alignment
        endif
      -%}
      <div class="reviews__header{% if section.settings.write_review_enable %}--flex{% endif %}">
        {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
          {%- render 'heading',
            alignment: alignement,
            enable_animations: section.settings.enable_animations,
            animation: section.settings.animation,
            subheading: section.settings.subheading,
            heading: section.settings.heading,
            description: section.settings.description,
            heading_class: 'video__heading',
            heading_style: section.settings.heading_style
          -%}
        {%- endif -%}

        {%- if section.settings.write_review_enable -%}
          {{- 'section-contact-form.css' | asset_url | stylesheet_tag -}}
          <details-modal>
            <details class="reviews__write-review {{ section.settings.alignment }}">
              <summary
                class="focus-inset modal__toggle"
                aria-haspopup="dialog"
                aria-label="{{ section.settings.write_review_title | escape }}"
              >
                <span
                  class="summary__title"
                  {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
                >
                  {{ section.settings.write_review_title }}
                  {% render 'icon-caret', behavior: settings.collapsible_icon %}
                </span>
              </summary>
              <div
                class="modal__content modal__content--center"
                role="dialog"
                aria-modal="true"
                aria-label="{{ section.settings.write_review_title | escape }}"
              >
                <div class="modal-overlay"></div>
                <div class="modal-wrapper" tabindex="-1">
                  <button
                    type="button"
                    class="modal__close-button link link--text focus-inset"
                    aria-label="{{ 'accessibility.close' | t }}"
                  >
                    <svg class="icon icon-close" aria-hidden="true" focusable="false">
                      <use href="#icon-close">
                    </svg>
                  </button>
                  <div class="color-{{ section.settings.write_review_color_palette }} reviews__write-form">
                    {%- form 'contact', id: 'ContactForm', class: 'isolate', return_to: 'back' -%}
                      {%- if form.posted_successfully? -%}
                        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
                          {% render 'icon-success' %}
                          {{ section.settings.success_message }}
                        </h2>
                      {%- elsif form.errors -%}
                        <div class="form__message">
                          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                            {% render 'icon-error' %}
                            {{ 'templates.contact.form.error_heading' | t }}
                          </h2>
                        </div>
                        <ul class="form-status-list caption-large" role="list">
                          <li>
                            <a href="#ContactForm-email" class="link">
                              {{ form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email }}
                            </a>
                          </li>
                        </ul>
                      {%- endif -%}

                      <div class="contact__fields">
                        <div class="field">
                          <input
                            class="field__input"
                            autocomplete="name"
                            type="text"
                            id="ContactForm-name"
                            name="contact[{{ 'templates.contact.form.name' | t }}]"
                            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                            placeholder="{{ 'templates.contact.form.name' | t }}"
                          >
                          <label class="field__label" for="ContactForm-name">
                            {{- 'templates.contact.form.name' | t -}}
                          </label>
                        </div>
                        <div class="field field--with-error">
                          <input
                            autocomplete="email"
                            type="email"
                            id="ContactForm-email"
                            class="field__input"
                            name="contact[email]"
                            spellcheck="false"
                            autocapitalize="off"
                            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                            aria-required="true"
                            {% if form.errors contains 'email' %}
                              aria-invalid="true"
                              aria-describedby="ContactForm-email-error"
                            {% endif %}
                            placeholder="{{ 'templates.contact.form.email' | t }}"
                          >
                          <label class="field__label" for="ContactForm-email">
                            {{- 'templates.contact.form.email' | t }}
                            <span aria-hidden="true">*</span></label
                          >
                          {%- if form.errors contains 'email' -%}
                            <small class="contact__field-error" id="ContactForm-email-error">
                              <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                              <span class="form__message">
                                {%- render 'icon-error' -%}
                                {{- form.errors.translated_fields.email | capitalize }}
                                {{ form.errors.messages.email -}}
                              </span>
                            </small>
                          {%- endif -%}
                        </div>
                      </div>

                      <div class="review_star_container">
                        <div class="review_star_label">
                          <p>{{ section.settings.write_review_label }}</p>
                        </div>
                        <label for="ContactFormRate1-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate1-{{ section.id }}" name="contact[note]" value="1/5"
                          ><span>1/5</span></label
                        >
                        <label for="ContactFormRate2-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate2-{{ section.id }}" name="contact[note]" value="2/5"
                          ><span>2/5</span></label
                        >
                        <label for="ContactFormRate3-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate3-{{ section.id }}" name="contact[note]" value="3/5"
                          ><span>3/5</span></label
                        >
                        <label for="ContactFormRate4-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate4-{{ section.id }}" name="contact[note]" value="4/5"
                          ><span>4/5</span></label
                        >
                        <label for="ContactFormRate5-{{ section.id }}"
                          ><input
                            type="radio"
                            id="ContactFormRate5-{{ section.id }}"
                            name="contact[note]"
                            value="5/5"
                            checked

                          ><span>5/5</span></label
                        >
                      </div>

                      <div class="field">
                        <textarea
                          rows="10"
                          id="ContactForm-body"
                          class="text-area field__input"
                          name="contact[{{ 'templates.contact.form.comment' | t }}]"
                          placeholder="{{ 'templates.contact.form.comment' | t }}"
                        >
                        {{- form.body -}}
                      </textarea>
                        <label class="form__label field__label field__label--from-textarea" for="ContactForm-body">
                          {{- 'templates.contact.form.comment' | t -}}
                        </label>
                      </div>
                      <div class="contact__button button__container">
                        <button type="submit" class="button button__style--{{ section.settings.button_style }}">
                          {{ section.settings.button_text }}
                        </button>
                      </div>
                    {%- endform -%}
                  </div>
                </div>
              </div>
            </details>
          </details-modal>
        {%- endif -%}
      </div>

      <div class="reviews__wrapper-swiper">
        <div
          id="reviews__{{ sectionId }}"
          class="swiper{% if layout == 'swiper' %} reviews__swiper{% unless section.settings.pagination %} swiper_no_pagination{% endunless %}{% endif %}"
          {%- if layout == 'swiper' %}
            {% render 'swiper-data-editor', numberOfSlides: section.blocks.size %}
          {% endif -%}
        >
          <div class="{% if layout == 'masonry' %}reviews__grid swiper__wrapper--{{ slidesPerViewMobile }}-phone swiper__wrapper--{{ slidesPerViewTablet }}-tablet swiper__wrapper--{{ slidesPerViewDesktop }}-desktop{% else %}swiper-wrapper{% endif %}">
            {%- for block in section.blocks -%}
              <div
                class="{% if layout == "swiper" %}swiper-slide {% endif %}reviews__block"
                {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
                {{ block.shopify_attributes }}
              >
                <div class="content-container">
                  {%- render 'reviews__blocks',
                    type: block.type,
                    height: section.settings.height,
                    image: block.settings.image,
                    video: block.settings.video,
                    heading: block.settings.heading,
                    description: block.settings.description,
                    name: block.settings.name,
                    rating: block.settings.stars_rating,
                    enable_rating: section.settings.enable_rating,
                    stars_style: section.settings.stars_style,
                    verified: block.settings.verified,
                    unique: block.id
                  -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
          {%- if layout == 'masonry' and section.blocks.size > section.settings.visible_grid_blocks -%}
            <div
              class="reviews__button"
              {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
            >
              <button class="button button__style--{{ section.settings.button_show_all_style }} reviews__show-all-blocks">
                {{ section.settings.button_show_all_text }}
              </button>
            </div>
          {%- endif -%}
        </div>

        {%- if layout == 'swiper' -%}
          {%- assign swiperEl = "'#reviews__" | append: sectionId | append: "'" -%}
          {%- capture swiperOptions -%}
            loop: {% if section.settings.loop and settings.swiper_pagination_style == "none" %}true{% else %}false{% endif %},
            mousewheel: { forceToAxis: true },
            spaceBetween: {{ settings.spacing_grid_horizontal | json }},
            slidesPerView: {{ slidesPerViewMobile | json }},
            autoHeight: true,
            autoplay: {
              pauseOnMouseEnter: true,
              enabled: {{ section.settings.autoplay | json }},
              delay: {{ section.settings.speed | times: 1000 | json }}
            },
            breakpoints: {
              750: { slidesPerView: {{ slidesPerViewTablet | json }} },
              1150: { slidesPerView: {{ slidesPerViewDesktop | json }} }
            },
          {%- endcapture -%}
          {% render 'swiper-theme-editor',
            sectionId: sectionId,
            swiperVariant: 'reviews__',
            swiperEl: swiperEl,
            swiperOptions: swiperOptions,
            navigation: section.settings.navigation,
            pagination: section.settings.pagination
          %}
        {%- endif -%}

        <script>
                    {%- if layout == 'masonry' and section.blocks.size > section.settings.visible_grid_blocks -%}
                      const toggleAllReviews__{{ sectionId }} = () => {
                        const getAllReviewsBlocks__{{ sectionId }} = document.querySelectorAll('#reviews__{{ sectionId }} .reviews__block');
                        const showAllBlocksButton__{{ sectionId }} = document.querySelector('#reviews__{{ sectionId }} .reviews__show-all-blocks');
                        showAllBlocksButton__{{ sectionId }}.addEventListener('click', (e) => {
                          getAllReviewsBlocks__{{ sectionId }}.forEach(b => b.style.display = "block");
                          e.target.style.display = "none";
                        });
                      }
                      toggleAllReviews__{{ sectionId }}();
                      document.addEventListener("shopify:section:load", toggleAllReviews__{{ sectionId }});
                      document.addEventListener("shopify:section:unload", toggleAllReviews__{{ sectionId }});
                    {%- endif -%}

                    {%- if section.settings.enable_plus_less -%}
                function toggleDescription(blockId) {
            try {
              var desc = document.querySelector('#description-' + blockId);
              if (!desc) {
                desc = document.querySelector('#description-text_' + blockId);
              }
              if (!desc) return;

              var shortDesc = desc.querySelector('.short-description');
              var fullDesc = desc.querySelector('.full-description');
              var button = desc.querySelector('.toggle-description');

              var block = desc.closest('.reviews__block');
              if (!block) block = desc;
              block.classList.toggle('is-expanded');
              var expanded = block.classList.contains('is-expanded');
              if (shortDesc) shortDesc.style.display = expanded ? 'none' : 'inline';
              if (fullDesc) fullDesc.style.display = expanded ? 'inline' : 'none';

              if (button) {
                button.textContent = expanded ? 'Show less' : 'Show more';
              }
              var content = block.querySelector('.content-container');
              if (content) {
                content.style.overflow = expanded ? 'visible' : '';
              }
              var swiperWrapper = desc.closest('.reviews__wrapper-swiper') || document.querySelector('.reviews__wrapper-swiper');
              if (swiperWrapper) {
                var swiperEl = swiperWrapper.querySelector('.swiper') || swiperWrapper.querySelector('.reviews__swiper');
                if (swiperEl && swiperEl.swiper && typeof swiperEl.swiper.update === 'function') {
                  swiperEl.swiper.update();
                  if (typeof swiperEl.swiper.updateAutoHeight === 'function') {
                    swiperEl.swiper.updateAutoHeight(300);
                  }
                } else {
                  if (window && window.Swiper) {
                    try {
                      if (swiperEl && swiperEl.classList) {
                        var activeIndex = 0;
                        for (var k in window) {
                          if (window.hasOwnProperty(k)) {
                            var maybe = window[k];
                            if (maybe && typeof maybe === 'object' && typeof maybe.update === 'function') {
                              try { maybe.update(); } catch(e){}
                            }
                          }
                        }
                      }
                    } catch(e){}
                  }
                }
              }
              document.body.offsetHeight;

            } catch (err) {
              console.error('toggleDescription error', err);
            }
          }

                    {%- endif -%}
        </script>
      </div>
    </div>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

{% schema %}
{
  "name": "t:sections.reviews.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "t:sections.global.section_id"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.global.subheading.label",
      "default": "Details"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.global.heading.label",
      "default": "Hear from our lovely customers"
    },
    {
      "type": "select",
      "id": "heading_style",
      "options": [
        {
          "value": "1",
          "label": "t:sections.global.style.options.1"
        },
        {
          "value": "2",
          "label": "t:sections.global.style.options.2"
        },
        {
          "value": "3",
          "label": "t:sections.global.style.options.3"
        }
      ],
      "default": "2",
      "label": "t:sections.global.style.heading",
      "visible_if": "{{ section.settings.heading != blank }}"
    },
    {
      "type": "inline_richtext",
      "id": "description",
      "label": "t:sections.global.description.label",
      "default": "Show to your customers a video presenting your brand and your products."
    },
    {
      "type": "select",
      "id": "alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.desktop_content_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "enable_rating",
      "label": "t:sections.image-with-text.settings.enable_rating.label",
      "default": true
    },
    {
      "type": "select",
      "id": "stars_style",
      "options": [
        {
          "value": "mini",
          "label": "t:settings_schema.stars.stars_style.options.mini"
        },
        {
          "value": "full",
          "label": "t:settings_schema.stars.stars_style.options.full"
        },
        {
          "value": "stars",
          "label": "t:settings_schema.stars.stars_style.options.stars"
        }
      ],
      "default": "stars",
      "label": "t:settings_schema.stars.stars_style.label",
      "visible_if": "{{ section.settings.enable_rating }}"
    },
    {
      "type": "header",
      "content": "t:sections.reviews.headers.write_review"
    },
    {
      "type": "checkbox",
      "id": "write_review_enable",
      "label": "t:sections.reviews.write_review_enable.label",
      "default": true
    },
    {
      "type": "text",
      "id": "write_review_title",
      "label": "t:sections.reviews.write_review_title.label",
      "default": "Write a review"
    },
    {
      "type": "text",
      "id": "write_review_label",
      "label": "t:sections.reviews.write_review_label.label",
      "default": "Note"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.global.button_text.label",
      "default": "Publish review"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "t:sections.reviews.success_message.label",
      "default": "Thank you! You review has been submitted."
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {
          "value": "1",
          "label": "t:sections.global.style.options.1"
        },
        {
          "value": "2",
          "label": "t:sections.global.style.options.2"
        },
        {
          "value": "3",
          "label": "t:sections.global.style.options.3"
        }
      ],
      "default": "1",
      "label": "t:sections.global.style.button",
      "visible_if": "{{ section.settings.button_text != blank }}"
    },
    {
      "type": "color_scheme",
      "id": "write_review_color_palette",
      "default": "background",
      "label": "t:sections.reviews.write_review_color_palette.label"
    },
    {
      "type": "header",
      "content": "t:sections.reviews.headers.layout"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "swiper",
          "label": "t:sections.reviews.layout.options.swiper"
        },
        {
          "value": "masonry",
          "label": "t:sections.reviews.layout.options.masonry"
        }
      ],
      "default": "swiper",
      "label": "t:sections.reviews.layout.label"
    },
    {
      "type": "range",
      "id": "slides_on_desktop",
      "min": 2,
      "max": 7,
      "step": 1,
      "unit": "itm",
      "label": "t:sections.reviews.slides_on_desktop.label",
      "default": 4
    },
    {
      "type": "range",
      "id": "slides_on_tablet",
      "min": 1,
      "max": 6,
      "step": 1,
      "unit": "itm",
      "label": "t:sections.reviews.slides_on_tablet.label",
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_on_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "unit": "itm",
      "label": "t:sections.reviews.slides_on_mobile.label",
      "default": 1
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.reviews.height.options.adapt"
        },
        {
          "value": "horizontal",
          "label": "t:sections.reviews.height.options.horizontal"
        },
        {
          "value": "square",
          "label": "t:sections.reviews.height.options.square"
        },
        {
          "value": "vertical",
          "label": "t:sections.reviews.height.options.vertical"
        }
      ],
      "default": "square",
      "label": "t:sections.reviews.height.label"
    },
    {
      "type": "checkbox",
      "id": "enable_plus_less",
      "label": "t:sections.reviews.enable_plus_less.label",
      "default": true
    },
    {
      "type": "text",
      "id": "plus",
      "label": "t:sections.reviews.plus.label",
      "default": "Show more",
      "visible_if": "{{ section.settings.enable_plus_less }}"
    },
    {
      "type": "text",
      "id": "less",
      "label": "t:sections.reviews.less.label",
      "default": "Show less",
      "visible_if": "{{ section.settings.enable_plus_less }}"
    },
    {
      "type": "range",
      "id": "plus_less_limit",
      "min": 80,
      "max": 250,
      "step": 2,
      "unit": "car",
      "label": "t:sections.reviews.plus_less_limit.label",
      "default": 110,
      "visible_if": "{{ section.settings.enable_plus_less }}"
    },
    {
      "type": "header",
      "content": "t:sections.reviews.headers.slider_settings",
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "checkbox",
      "id": "preshot_swiper",
      "label": "t:sections.reviews.preshot.label",
      "default": true,
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "t:sections.reviews.loop.label",
      "default": true,
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "checkbox",
      "id": "navigation",
      "label": "t:sections.reviews.navigation.label",
      "default": true,
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "t:sections.reviews.pagination.label",
      "default": true,
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": true,
      "visible_if": "{{ section.settings.layout == 'swiper' }}"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_speed.label",
      "default": 4,
