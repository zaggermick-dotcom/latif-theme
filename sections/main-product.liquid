<script>
(function() {
  'use strict';
  
  var stickyBar = document.getElementById('stickyAtcBar');
  var stickyButton = document.getElementById('stickyAtcButton');
  var stickyText = stickyButton ? stickyButton.querySelector('.sticky-atc-text') : null;
  var stickyPrice = document.getElementById('stickyAtcPrice');
  var isVisible = false;
  
  var CONFIG = {
    scrollThreshold: {{ sticky_block.settings.scroll_threshold | default: 400 }},
    loadingText: "{{ sticky_block.settings.loading_text | default: 'Ajout...' }}",
    buttonText: "{{ sticky_block.settings.button_text | default: 'Ajouter au panier' }}",
    showPrice: {{ sticky_block.settings.show_price | default: false }}
  };
  
  /* === SCROLL VISIBILITY === */
  function checkScroll() {
    if (window.scrollY > CONFIG.scrollThreshold) {
      if (!isVisible) {
        stickyBar.classList.add('visible');
        isVisible = true;
      }
    } else {
      if (isVisible) {
        stickyBar.classList.remove('visible');
        isVisible = false;
      }
    }
  }
  
  /* === SYNCHRONISATION AVEC LE PACK S√âLECTIONN√â === */
  function syncWithSelectedPack() {
    /* Chercher le pack s√©lectionn√© (packs simples) */
    var selectedPack = document.querySelector('.pack-conversion__card.pack__selected, .pack__selected');
    
    /* Chercher le pack multi-produits s√©lectionn√© */
    var selectedMultiPack = document.querySelector('.pack-multi-card.pack-multi--selected');
    
    var price = null;
    var quantity = 1;
    
    if (selectedPack) {
      /* Pack simple s√©lectionn√© */
      price = selectedPack.dataset.regularPrice || selectedPack.querySelector('.pack-conversion__price')?.textContent;
      quantity = parseInt(selectedPack.dataset.quantity) || 1;
    } else if (selectedMultiPack) {
      /* Pack multi-produits s√©lectionn√© */
      price = selectedMultiPack.dataset.price || selectedMultiPack.querySelector('.pack-multi-card__price')?.textContent;
    }
    
    /* Fallback: chercher dans d'autres s√©lecteurs */
    if (!price) {
      var priceSelectors = [
        '#packButtonPrice-' + window.currentSectionId,
        '.pack-conversion__button-price',
        '.pack-accordion.active .pack-accordion__price',
        '.price--sale .price-item--sale',
        '.price .price-item--regular',
        '[data-product-price]'
      ];
      
      for (var i = 0; i < priceSelectors.length; i++) {
        var priceEl = document.querySelector(priceSelectors[i]);
        if (priceEl && priceEl.textContent.trim()) {
          price = priceEl.textContent.trim();
          break;
        }
      }
    }
    
    /* Mettre √† jour le prix affich√© */
    if (CONFIG.showPrice && stickyPrice && price) {
      stickyPrice.textContent = price;
    }
    
    return { price: price, quantity: quantity };
  }
  
  /* === AJOUT AU PANIER INSTANTAN√â === */
  function addToCartInstant() {
    if (stickyButton.classList.contains('loading')) return;
    
    /* Feedback visuel imm√©diat */
    stickyButton.classList.add('loading');
    if (stickyText) stickyText.textContent = CONFIG.loadingText;
    
    /* R√©cup√©rer les donn√©es du pack s√©lectionn√© */
    var packData = syncWithSelectedPack();
    
    /* Chercher le formulaire et les donn√©es */
    var variantInput = document.querySelector(
      '.pack-conversion__card.pack__selected input[name="id"], ' +
      '#pack-variant-id-' + window.currentSectionId + ', ' +
      'input[name="id"], ' +
      'select[name="id"]'
    );
    
    var quantityInput = document.querySelector(
      '#pack-quantity-input-' + window.currentSectionId + ', ' +
      'input[name="quantity"]'
    );
    
    var variantId = variantInput ? variantInput.value : null;
    var quantity = quantityInput ? parseInt(quantityInput.value) || 1 : packData.quantity;
    
    /* Si pas de variant ID, chercher dans le produit */
    if (!variantId) {
      var productJson = document.querySelector('[data-product-json]');
      if (productJson) {
        try {
          var product = JSON.parse(productJson.textContent);
          variantId = product.selected_or_first_available_variant?.id || product.variants[0]?.id;
        } catch(e) {}
      }
    }
    
    /* Fallback: utiliser l'URL */
    if (!variantId) {
      var urlParams = new URLSearchParams(window.location.search);
      variantId = urlParams.get('variant');
    }
    
    if (!variantId) {
      /* Dernier recours: cliquer sur le vrai bouton */
      clickFallbackButton();
      return;
    }
    
    /* Collecter les propri√©t√©s (options/cadeaux) */
    var properties = {};
    var activeOptions = document.querySelectorAll('.option-item.active:not(.hidden-option) input[type="checkbox"]:checked');
    activeOptions.forEach(function(input) {
      var key = input.name.replace('properties[', '').replace(']', '');
      properties[key] = input.value;
    });
    
    /* Construire les donn√©es */
    var cartData = {
      id: parseInt(variantId),
      quantity: quantity
    };
    
    if (Object.keys(properties).length > 0) {
      cartData.properties = properties;
    }
    
    /* ENVOI INSTANTAN√â AU PANIER */
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify(cartData)
    })
    .then(function(response) {
      if (!response.ok) throw new Error('Erreur ajout panier');
      return response.json();
    })
    .then(function(data) {
      /* Succ√®s - Ouvrir le cart drawer */
      openCartDrawer();
      resetButton();
    })
    .catch(function(error) {
      console.error('Sticky ATC Error:', error);
      /* En cas d'erreur, essayer le bouton classique */
      clickFallbackButton();
    });
  }
  
  /* === OUVRIR LE CART DRAWER === */
  function openCartDrawer() {
    /* M√©thode 1: Cart drawer natif Shopify */
    var cartDrawer = document.querySelector('cart-drawer');
    if (cartDrawer && typeof cartDrawer.open === 'function') {
      cartDrawer.open();
      return;
    }
    
    /* M√©thode 2: Fonction globale */
    if (typeof window.openCartDrawer === 'function') {
      window.openCartDrawer();
      return;
    }
    
    /* M√©thode 3: Event dispatch */
    document.dispatchEvent(new CustomEvent('cart:refresh'));
    document.dispatchEvent(new CustomEvent('cart:open'));
    
    /* M√©thode 4: Classes CSS */
    var drawerSelectors = [
      'cart-drawer',
      '.cart-drawer',
      '#cart-drawer',
      '[data-cart-drawer]',
      '.drawer--cart',
      '#CartDrawer'
    ];
    
    for (var i = 0; i < drawerSelectors.length; i++) {
      var drawer = document.querySelector(drawerSelectors[i]);
      if (drawer) {
        drawer.classList.add('is-open', 'active', 'drawer--is-open');
        drawer.setAttribute('open', '');
        document.body.classList.add('overflow-hidden', 'js-drawer-open');
        
        /* Trigger pour th√®mes qui √©coutent */
        drawer.dispatchEvent(new Event('transitionend'));
        break;
      }
    }
    
    /* M√©thode 5: Rafra√Æchir le contenu du drawer */
    fetch('/cart.js')
      .then(function(r) { return r.json(); })
      .then(function(cart) {
        document.dispatchEvent(new CustomEvent('cart:update', { detail: cart }));
      });
  }
  
  /* === FALLBACK: CLIQUER SUR LE VRAI BOUTON === */
  function clickFallbackButton() {
    var buttonSelectors = [
      '#pack-add-btn-' + window.currentSectionId,
      '.pack-conversion__button',
      '.product-form__submit',
      'button[name="add"]',
      'form[action*="/cart/add"] button[type="submit"]'
    ];
    
    for (var i = 0; i < buttonSelectors.length; i++) {
      var btn = document.querySelector(buttonSelectors[i]);
      if (btn && btn.offsetParent !== null) {
        btn.click();
        setTimeout(resetButton, 1000);
        return;
      }
    }
    
    resetButton();
  }
  
  /* === RESET DU BOUTON === */
  function resetButton() {
    stickyButton.classList.remove('loading');
    if (stickyText) stickyText.textContent = CONFIG.buttonText;
  }
  
  /* === OBSERVERS POUR SYNCHRONISATION === */
  function setupPackObservers() {
    /* √âcouter les clics sur les packs */
    document.addEventListener('click', function(e) {
      var packCard = e.target.closest('.pack-conversion__card, .pack-multi-card, .pack-accordion, [data-pack]');
      if (packCard) {
        /* Synchroniser apr√®s un court d√©lai pour laisser le temps √† la s√©lection */
        setTimeout(syncWithSelectedPack, 50);
        setTimeout(syncWithSelectedPack, 150);
      }
    });
    
    /* Observer les mutations sur le prix du bouton principal */
    var priceObserver = new MutationObserver(function() {
      syncWithSelectedPack();
    });
    
    var priceTargets = document.querySelectorAll('.pack-conversion__button-price, [id^="packButtonPrice-"]');
    priceTargets.forEach(function(target) {
      priceObserver.observe(target, { childList: true, characterData: true, subtree: true });
    });
  }
  
  /* === TROUVER LE SECTION ID === */
  function findSectionId() {
    var packSection = document.querySelector('.product-pack-conversion[data-section-id]');
    if (packSection) {
      window.currentSectionId = packSection.dataset.sectionId;
    } else {
      var sectionEl = document.querySelector('[data-section-id]');
      window.currentSectionId = sectionEl ? sectionEl.dataset.sectionId : '';
    }
  }
  
  /* === INITIALISATION === */
  function init() {
    if (!stickyBar || !stickyButton) return;
    
    findSectionId();
    
    /* Scroll listener */
    window.addEventListener('scroll', checkScroll, { passive: true });
    
    /* Clic sur le bouton sticky - INSTANTAN√â */
    stickyButton.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      addToCartInstant();
    });
    
    /* Setup observers pour sync */
    setupPackObservers();
    
    /* Check initial */
    checkScroll();
    
    /* Sync initial */
    if (CONFIG.showPrice) {
      setTimeout(syncWithSelectedPack, 300);
      setTimeout(syncWithSelectedPack, 800);
    }
  }
  
  /* D√©marrage */
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

