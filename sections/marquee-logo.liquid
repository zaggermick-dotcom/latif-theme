{%- # region(collapsed) Styles -%}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  #marquee__{{ section.id }}.marquee__wrapper {
    column-gap: {{ section.settings.gap | divided_by: 10.0 }}rem;
  }

  #marquee__{{ section.id }} .marquee__text {
    animation: marquee {{ section.settings.delay }}s linear infinite;
    column-gap: {{ section.settings.gap | divided_by: 10.0 }}rem;
  }

  #marquee__{{ section.id }}:hover .marquee__text {
    animation-play-state: paused;
  }
  
  #marquee__{{ section.id }} .marquee__text img {
    width: {{ section.settings.width }}px;
    height: auto;
    object-fit: cover;
	  box-shadow: var(--media-container-shadow);
    {% if section.settings.border-radius %}
    border-radius: var(--media-container-radius);
    {% endif %}
  }

  #marquee__{{ section.id }} .marquee__text img {
    aspect-ratio: {% if section.settings.image_ratio == 'portrait' %}0.8{% elsif section.settings.image_ratio == 'square' %}1{% else %}initial{% endif %};
  }

  .marquee .heading__section {
    padding-bottom: 2rem;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* OPTIMISATIONS PERFORMANCE ET FLUIDITE - AJOUTS                          */
  /* ════════════════════════════════════════════════════════════════════════ */

  /* Force GPU acceleration pour animations fluides */
  #marquee__{{ section.id }} .marquee__text {
    will-change: transform;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    perspective: 1000px;
    -webkit-perspective: 1000px;
  }

  /* Conteneur optimise */
  #marquee__{{ section.id }}.marquee__wrapper {
    overflow: hidden;
    position: relative;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    /* Masquer les debordements proprement */
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 2%,
      black 98%,
      transparent 100%
    );
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 2%,
      black 98%,
      transparent 100%
    );
  }

  /* Images optimisees */
  #marquee__{{ section.id }} .marquee__text img {
    /* Performance rendering */
    will-change: auto;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
    /* Eviter le flickering */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    /* Transition douce au chargement */
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  /* Image en cours de chargement */
  #marquee__{{ section.id }} .marquee__text img[loading] {
    opacity: 0;
  }

  #marquee__{{ section.id }} .marquee__text img.loaded {
    opacity: 1;
  }

  /* Animation marquee optimisee - utilise transform au lieu de left/margin */
  @keyframes marquee-optimized-{{ section.id }} {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(-100%, 0, 0);
    }
  }

  /* Appliquer animation optimisee */
  #marquee__{{ section.id }} .marquee__text {
    animation-name: marquee-optimized-{{ section.id }};
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-fill-mode: forwards;
  }

  /* Pause smooth au hover */
  #marquee__{{ section.id }}:hover .marquee__text {
    animation-play-state: paused;
  }

  /* Focus states pour accessibilite */
  #marquee__{{ section.id }}:focus-within .marquee__text {
    animation-play-state: paused;
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* RESPONSIVE AMELIORE                                                      */
  /* ════════════════════════════════════════════════════════════════════════ */

  /* Mobile petit */
  @media screen and (max-width: 479px) {
    #marquee__{{ section.id }} .marquee__text img {
      width: {{ section.settings.width | times: 0.6 | round }}px;
      min-width: 40px;
    }
    #marquee__{{ section.id }}.marquee__wrapper {
      column-gap: {{ section.settings.gap | times: 0.5 | divided_by: 10.0 }}rem;
    }
    #marquee__{{ section.id }} .marquee__text {
      column-gap: {{ section.settings.gap | times: 0.5 | divided_by: 10.0 }}rem;
    }
  }

  /* Mobile standard */
  @media screen and (min-width: 480px) and (max-width: 749px) {
    #marquee__{{ section.id }} .marquee__text img {
      width: {{ section.settings.width | times: 0.75 | round }}px;
    }
    #marquee__{{ section.id }}.marquee__wrapper {
      column-gap: {{ section.settings.gap | times: 0.7 | divided_by: 10.0 }}rem;
    }
    #marquee__{{ section.id }} .marquee__text {
      column-gap: {{ section.settings.gap | times: 0.7 | divided_by: 10.0 }}rem;
    }
  }

  /* Tablette */
  @media screen and (min-width: 750px) and (max-width: 989px) {
    #marquee__{{ section.id }} .marquee__text img {
      width: {{ section.settings.width | times: 0.85 | round }}px;
    }
  }

  /* Reduce motion pour accessibilite */
  @media (prefers-reduced-motion: reduce) {
    #marquee__{{ section.id }} .marquee__text {
      animation-duration: {{ section.settings.delay | times: 3 }}s;
    }
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* STABILITE ET ANTI-FLICKERING                                            */
  /* ════════════════════════════════════════════════════════════════════════ */

  /* Conteneur stable */
  #marquee__{{ section.id }}.marquee__wrapper {
    min-height: {{ section.settings.width | times: 1.2 }}px;
    contain: layout style;
  }

  /* Flexbox stable */
  #marquee__{{ section.id }} .marquee__flex {
    display: flex;
    flex-shrink: 0;
    align-items: center;
    justify-content: flex-start;
    white-space: nowrap;
  }

  /* Eviter les sauts de layout */
  #marquee__{{ section.id }} .marquee__text img {
    display: block;
    flex-shrink: 0;
    max-width: none;
  }

  /* Placeholder pendant chargement */
  #marquee__{{ section.id }} .placeholder__text {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.width }}px;
    height: {{ section.settings.width }}px;
    background: rgba(var(--color-foreground), 0.05);
    border-radius: var(--media-container-radius);
    font-size: 0.75rem;
    color: rgba(var(--color-foreground), 0.5);
    text-align: center;
    padding: 1rem;
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* ANIMATIONS ENTREE AMELIOREES                                            */
  /* ════════════════════════════════════════════════════════════════════════ */

  /* Container animation d entree */
  .marquee__wrapper-enter {
    opacity: 0;
    transform: translateY(20px);
  }

  .marquee__wrapper-enter.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hover effect sur images */
  #marquee__{{ section.id }} .marquee__text img {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.3s ease,
                opacity 0.3s ease;
  }

  #marquee__{{ section.id }}:hover .marquee__text img:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

{%- endstyle -%}
