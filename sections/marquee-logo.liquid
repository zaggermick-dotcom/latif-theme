{%- # region(collapsed) JavaScript Optimizations -%}
<script>
(function() {
  'use strict';
  
  var sectionId = '{{ section.id }}';
  var marqueeWrapper = document.querySelector('[data-marquee-section="' + sectionId + '"]');
  
  if (!marqueeWrapper) return;

  /* ════════════════════════════════════════════════════════════════════════ */
  /* INTERSECTION OBSERVER - Animation entree                                */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  if ('IntersectionObserver' in window) {
    var observerOptions = {
      root: null,
      rootMargin: '50px',
      threshold: 0.1
    };
    
    var marqueeObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          marqueeObserver.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    marqueeObserver.observe(marqueeWrapper);
  } else {
    marqueeWrapper.classList.add('visible');
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* LAZY LOADING IMAGES - Chargement optimise                               */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  var images = marqueeWrapper.querySelectorAll('img.marquee-img');
  
  images.forEach(function(img) {
    if (img.complete) {
      img.classList.add('loaded');
    } else {
      img.addEventListener('load', function() {
        this.classList.add('loaded');
      });
      img.addEventListener('error', function() {
        this.style.display = 'none';
      });
    }
  });

  /* ════════════════════════════════════════════════════════════════════════ */
  /* PAUSE ANIMATION - Visibilite page                                       */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  var marqueeTexts = marqueeWrapper.querySelectorAll('.marquee__text');
  
  document.addEventListener('visibilitychange', function() {
    marqueeTexts.forEach(function(text) {
      if (document.hidden) {
        text.style.animationPlayState = 'paused';
      } else {
        text.style.animationPlayState = 'running';
      }
    });
  });

  /* ════════════════════════════════════════════════════════════════════════ */
  /* PERFORMANCE - Pause hors viewport                                       */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  if ('IntersectionObserver' in window) {
    var performanceObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        marqueeTexts.forEach(function(text) {
          if (entry.isIntersecting) {
            text.style.animationPlayState = 'running';
          } else {
            text.style.animationPlayState = 'paused';
          }
        });
      });
    }, { threshold: 0 });
    
    performanceObserver.observe(marqueeWrapper);
  }

  /* ════════════════════════════════════════════════════════════════════════ */
  /* TOUCH SUPPORT - Mobile gestures                                         */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  var touchStartX = 0;
  var isTouching = false;
  
  marqueeWrapper.addEventListener('touchstart', function(e) {
    isTouching = true;
    touchStartX = e.touches[0].clientX;
    marqueeTexts.forEach(function(text) {
      text.style.animationPlayState = 'paused';
    });
  }, { passive: true });
  
  marqueeWrapper.addEventListener('touchend', function() {
    isTouching = false;
    marqueeTexts.forEach(function(text) {
      text.style.animationPlayState = 'running';
    });
  }, { passive: true });
  
  marqueeWrapper.addEventListener('touchcancel', function() {
    isTouching = false;
    marqueeTexts.forEach(function(text) {
      text.style.animationPlayState = 'running';
    });
  }, { passive: true });

  /* ════════════════════════════════════════════════════════════════════════ */
  /* RESIZE HANDLER - Recalcul fluide                                        */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  var resizeTimeout;
  
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimeout);
    
    marqueeTexts.forEach(function(text) {
      text.style.animationPlayState = 'paused';
    });
    
    resizeTimeout = setTimeout(function() {
      marqueeTexts.forEach(function(text) {
        text.style.animationPlayState = 'running';
      });
    }, 150);
  }, { passive: true });

  /* ════════════════════════════════════════════════════════════════════════ */
  /* REDUCE MOTION - Accessibilite                                           */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  var prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
  
  function handleReducedMotion(e) {
    if (e.matches) {
      marqueeTexts.forEach(function(text) {
        text.style.animationDuration = '{{ section.settings.delay | times: 3 }}s';
      });
    } else {
      marqueeTexts.forEach(function(text) {
        text.style.animationDuration = '{{ section.settings.delay }}s';
      });
    }
  }
  
  prefersReducedMotion.addEventListener('change', handleReducedMotion);
  handleReducedMotion(prefersReducedMotion);

  /* ════════════════════════════════════════════════════════════════════════ */
  /* FOCUS MANAGEMENT - Accessibilite clavier                                */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  marqueeWrapper.setAttribute('tabindex', '0');
  marqueeWrapper.setAttribute('role', 'marquee');
  marqueeWrapper.setAttribute('aria-label', 'Galerie defilante');
  
  marqueeWrapper.addEventListener('focus', function() {
    marqueeTexts.forEach(function(text) {
      text.style.animationPlayState = 'paused';
    });
  });
  
  marqueeWrapper.addEventListener('blur', function() {
    if (!isTouching) {
      marqueeTexts.forEach(function(text) {
        text.style.animationPlayState = 'running';
      });
    }
  });

  /* ════════════════════════════════════════════════════════════════════════ */
  /* KEYBOARD CONTROLS                                                       */
  /* ════════════════════════════════════════════════════════════════════════ */
  
  marqueeWrapper.addEventListener('keydown', function(e) {
    if (e.key === ' ' || e.key === 'Enter') {
      e.preventDefault();
      var currentState = marqueeTexts[0].style.animationPlayState;
      var newState = currentState === 'paused' ? 'running' : 'paused';
      marqueeTexts.forEach(function(text) {
        text.style.animationPlayState = newState;
      });
    }
  });

})();
</script>
{%- # endregion ══════════════════════════════════════════════════════════════ -%}

