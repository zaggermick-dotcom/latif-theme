{{ 'component-e-tabs-alternate.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign first_block = section.blocks.first
  assign active_block_id = first_block.id
  
  assign bgImage = section.settings.image_bg_colored
  assign bgImageMobile = section.settings.image_bg_colored_mobile
  if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank
    render 'cut-colored'
  endif
-%}

{%- style -%}  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  {%- if section.settings.hide_mobile -%}
    @media screen and (max-width: 749px) {
      .section-{{ section.id }}-padding { display: none; }
    }
  {%- endif -%}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      {%- if section.settings.hide_desktop -%}
        display: none;
      {%- endif -%}
    }
  }
{%- endstyle -%}

{%- render 'separator-top', section: section -%}

<div id="{{ section.settings.section_id }}" class="color-{{ section.settings.color_palette }} section-{{ section.id }}-padding{% if section.settings.enable_cut_bg_color or section.settings.image_bg_colored != blank or section.settings.image_bg_colored_mobile != blank %} cut-colored-section{% endif %}">
  <div class="e-tabs-alternate container container--{{ section.settings.layout_width }}">
    <e-tabs-alternate class="e-tabs-alternate__wrapper">
    
    {%- liquid
      for block in section.blocks
        if block.type == "picto"
          render "pictogram", block: block
        endif
      endfor
    -%}
    
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      {%- render 'heading',
        alignment: section.settings.alignment,
        enable_animations: section.settings.enable_animations,
        animation: section.settings.animation,
        subheading: section.settings.subheading,
        heading: section.settings.heading,
        description: section.settings.description,
        heading_class: 'e-tabs-alternate__heading',
        heading_style: section.settings.heading_style
      -%}
    {%- endif -%}

    <div class="e-tabs-alternate__content">
      
      <!-- Top row: Tab buttons -->
      <div class="e-tabs-alternate__nav e-tabs-alternate__nav--{{ section.settings.nav_alignment }}">
        <div class="e-tabs-alternate__nav-list" role="tablist" aria-label="Navigation des onglets">
          {%- for block in section.blocks -%}
            <button
              class="e-tabs-alternate__nav-item{% if forloop.first %} e-tabs-alternate__nav-item--active{% endif %}"
              role="tab"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              aria-controls="e-tabs-alternate-panel-{{ block.id }}"
              id="e-tabs-alternate-tab-{{ block.id }}"
              data-tab-id="{{ block.id }}"
              {{ block.shopify_attributes }}
              {%- render 'animation',
                enable_animations: section.settings.enable_animations,
                animation: section.settings.animation
              -%}
            >
              <span class="e-tabs-alternate__nav-text">{{ block.settings.title }}</span>
            </button>
          {%- endfor -%}
        </div>
      </div>

      <!-- Bottom row: Tab content -->
      <div class="e-tabs-alternate__panels">
        {%- for block in section.blocks -%}
          <div
            class="e-tabs-alternate__panel{% if forloop.first %} e-tabs-alternate__panel--active{% endif %}"
            role="tabpanel"
            id="e-tabs-alternate-panel-{{ block.id }}"
            aria-labelledby="e-tabs-alternate-tab-{{ block.id }}"
            {% if forloop.first == false %}hidden{% endif %}
            {%- render 'animation',
              enable_animations: section.settings.enable_animations,
              animation: section.settings.animation
            -%}
          >
            <div class="e-tabs-alternate__panel-content">
              {%- if block.settings.image != blank -%}
                <div class="e-tabs-alternate__panel-image global-media-settings">
                  {%- capture sizes -%}
                    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                    (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                  {%- endcapture -%}
                  {{
                    block.settings.image
                    | image_url: width: 800
                    | image_tag: loading: 'lazy', sizes: sizes, widths: '400, 600, 800, 1000'
                  }}
                </div>
              {%- endif -%}
              
              <div class="e-tabs-alternate__panel-text e-tabs-alternate__panel-text--{{ block.settings.text_alignment }}">
                <h3 class="e-tabs-alternate__panel-title h3">{{ block.settings.title }}</h3>
                {%- if block.settings.description != blank -%}
                  <div class="e-tabs-alternate__panel-description rte">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="e-tabs-alternate__panel-button">
                    <a href="{{ block.settings.button_url | default: '#' }}" class="button button__style--{{ block.settings.button_style }}">
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

    </div>
    </e-tabs-alternate>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

