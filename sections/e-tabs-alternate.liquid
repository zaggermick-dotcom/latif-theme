<script>
  class ETabsAlternate extends HTMLElement {
    constructor() {
      super();
      this.tabList = this.querySelector('.e-tabs-alternate__nav-list');
      this.tabs = this.querySelectorAll('.e-tabs-alternate__nav-item');
      this.panels = this.querySelectorAll('.e-tabs-alternate__panel');
      this.init();
    }

    init() {
      this.tabs.forEach(tab => {
        tab.addEventListener('click', () => this.switchTab(tab));
        tab.addEventListener('keydown', (e) => this.handleKeydown(e, tab));
      });
    }

    switchTab(activeTab) {
      const targetPanelId = activeTab.getAttribute('aria-controls');
      const targetPanel = this.querySelector(`#${targetPanelId}`);

      // Update tab states
      this.tabs.forEach(tab => {
        tab.classList.remove('e-tabs-alternate__nav-item--active');
        tab.setAttribute('aria-selected', 'false');
      });
      
      activeTab.classList.add('e-tabs-alternate__nav-item--active');
      activeTab.setAttribute('aria-selected', 'true');

      // Update panel states
      this.panels.forEach(panel => {
        panel.classList.remove('e-tabs-alternate__panel--active');
        panel.setAttribute('hidden', '');
      });
      
      targetPanel.classList.add('e-tabs-alternate__panel--active');
      targetPanel.removeAttribute('hidden');
    }

    handleKeydown(e, tab) {
      const currentIndex = Array.from(this.tabs).indexOf(tab);
      let targetIndex;

      switch(e.key) {
        case 'ArrowRight':
        case 'ArrowDown':
          e.preventDefault();
          targetIndex = (currentIndex + 1) % this.tabs.length;
          break;
        case 'ArrowLeft':
        case 'ArrowUp':
          e.preventDefault();
          targetIndex = currentIndex === 0 ? this.tabs.length - 1 : currentIndex - 1;
          break;
        case 'Home':
          e.preventDefault();
          targetIndex = 0;
          break;
        case 'End':
          e.preventDefault();
          targetIndex = this.tabs.length - 1;
          break;
        case 'Enter':
        case ' ':
          e.preventDefault();
          this.switchTab(tab);
          return;
        default:
          return;
      }

      this.tabs[targetIndex].focus();
    }
  }

  customElements.define('e-tabs-alternate', ETabsAlternate);
</script>
