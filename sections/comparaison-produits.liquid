}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* grid responsive */
@media(max-width:1024px) {
  #shopify-section-{{ section.id }} {
    --grid-template-columns: minmax(40%, max-content) minmax(25%, 1fr) {% if section.settings.col_enable_2 %}minmax(25%, 1fr){% endif %} {% if section.settings.col_enable_3 %}minmax(25%, max-content){% endif %} {% if section.settings.col_enable_4 %}minmax(25%, max-content){% endif %};
  }
}

@media(min-width:1025px) {
  #shopify-section-{{ section.id }} {
    --grid-template-columns: minmax({% if column_count == 1 %}66%{% elsif column_count == 2 %}50%{% else %}33%{% endif %}, max-content) repeat(auto-fit, minmax(0px, 1fr));
  }
}

/* container look */
.comparaison-list.container {
  background: var(--color-background, transparent);
  border-radius: 16px;
  padding: 18px;
  box-shadow: 0 6px 20px rgba(11,15,25,0.06);
  transition: box-shadow .18s ease, transform .12s ease;
}
.comparaison-list.container:hover {
  box-shadow: 0 10px 30px rgba(11,15,25,0.09);
  transform: translateY(-3px);
}

/* table */
.comparaison-table {
  display: grid;
  grid-auto-flow: column;
  gap: 12px;
  align-items: start;
  overflow: visible;
}
.comparaison-table--overflow {
  overflow-x: auto;
  padding-bottom: 8px;
}

/* column */
.comparaison-table__col {
  background: var(--color-surface, #fff);
  border-radius: 12px;
  padding: 12px;
  min-width: 180px;
  box-shadow: 0 4px 14px rgba(10,10,10,0.03);
}

/* Ombres personnalisÃ©es pour chaque colonne */
{%- if section.settings.col_shadow_enable_1 -%}
.comparaison-table__col:nth-child(2) {
  box-shadow: 0 {{ section.settings.col_shadow_y_1 }}px {{ section.settings.col_shadow_blur_1 }}px {{ section.settings.col_shadow_color_1 | color_modify: 'alpha', section.settings.col_shadow_opacity_1 }} !important;
}
{%- endif -%}

{%- if section.settings.col_shadow_enable_2 and section.settings.col_enable_2 -%}
.comparaison-table__col:nth-child(3) {
  box-shadow: 0 {{ section.settings.col_shadow_y_2 }}px {{ section.settings.col_shadow_blur_2 }}px {{ section.settings.col_shadow_color_2 | color_modify: 'alpha', section.settings.col_shadow_opacity_2 }} !important;
}
{%- endif -%}

{%- if section.settings.col_shadow_enable_3 and section.settings.col_enable_3 -%}
.comparaison-table__col:nth-child(4) {
  box-shadow: 0 {{ section.settings.col_shadow_y_3 }}px {{ section.settings.col_shadow_blur_3 }}px {{ section.settings.col_shadow_color_3 | color_modify: 'alpha', section.settings.col_shadow_opacity_3 }} !important;
}
{%- endif -%}

{%- if section.settings.col_shadow_enable_4 and section.settings.col_enable_4 -%}
.comparaison-table__col:nth-child(5) {
  box-shadow: 0 {{ section.settings.col_shadow_y_4 }}px {{ section.settings.col_shadow_blur_4 }}px {{ section.settings.col_shadow_color_4 | color_modify: 'alpha', section.settings.col_shadow_opacity_4 }} !important;
}
{%- endif -%}

/* brand heading cell */
.comparaison-table__cell--heading {
  display:flex;
  align-items:center;
  justify-content:center;
  gap:12px;
  padding: 14px;
  border-bottom: 1px solid rgba(11,15,25,0.04);
  margin-bottom: 8px;
  min-height: 80px;
}

/* feature cell */
.comparaison-table__cell {
  padding: 10px;
  border-radius: 8px;
  display:flex;
  align-items:center;
  justify-content:center;
  min-height: 64px;
  flex-direction: column;
  gap: 8px;
}

.comparaison-table__value {
  font-weight: 600;
  color: var(--color-foreground, #111);
  display:block;
  width:100%;
  text-align:center;
}

/* tooltip */
[data-tooltip] { cursor: help; text-decoration: underline dotted; }

/* color controls from settings */
.icon-approved { color: {{ section.settings.approved_color }}; fill: {{ section.settings.approved_color }}; }
.icon-cross { color: {{ section.settings.cross_color }}; fill: {{ section.settings.cross_color }}; }
.value-percentage { color: {{ section.settings.percentage_color }}; font-weight:700; }
.value-strap { color: {{ section.settings.strap_color }}; font-weight:700; }

/* verified badge */
.label-verified {
  display:inline-block;
  background: {{ section.settings.approved_color }};
  color: #fff;
  padding: 6px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight:700;
}

/* progress bar */
.progress {
  width: 100%;
  height: 10px;
  background: rgba(0,0,0,0.06);
  border-radius: 999px;
  overflow: hidden;
  box-shadow: inset 0 -1px 0 rgba(255,255,255,0.3);
}
.progress__bar {
  height: 100%;
  background: linear-gradient(90deg, {{ section.settings.percentage_color }} 0%, {{ section.settings.percentage_color }} 100%);
  width: 0%;
  transition: width .6s cubic-bezier(.2,.8,.2,1);
  border-radius: 999px;
}

/* small caption */
.progress__caption {
  display:flex;
  justify-content:center;
  gap:8px;
  align-items:center;
  width:100%;
  font-size:12px;
  color: rgba(0,0,0,0.6);
}

/* images */
.comparaison-table__col img {
  max-width: 120px;
  height: auto;
  object-fit: contain;
  display:block;
  margin: 0 auto;
}

/* responsive tweaks */
@media (max-width: 700px) {
  .comparaison-table__col { min-width: 140px; padding:8px; }
  .comparaison-table__cell--heading { min-height: 64px; padding:8px; }
}
