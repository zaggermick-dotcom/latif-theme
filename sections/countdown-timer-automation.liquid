{%- comment -%}
  Section: countdown-timer-automation.liquid
  Description: Timer de compte à rebours pour les promotions automatisées
  Compatible avec Shopify Flow pour déclencher/terminer automatiquement les promotions
{%- endcomment -%}

{%- if section.settings.show_section -%}
  {%- liquid
    assign end_date = section.settings.end_date
    assign end_time = section.settings.end_time | default: '23:59'
    assign full_end_datetime = end_date | append: 'T' | append: end_time | append: ':00'
  -%}
  
  <div 
    class="countdown-section color-{{ section.settings.color_scheme }} gradient"
    style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;"
    data-countdown-section
  >
    <div class="page-width">
      <div class="countdown-container countdown-container--{{ section.settings.layout }}">
        
        {%- if section.settings.badge_text != blank -%}
          <div class="countdown-badge">
            {{ section.settings.badge_text }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="countdown-heading {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.subheading != blank -%}
          <p class="countdown-subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        
        <div 
          class="countdown-timer" 
          data-countdown-timer
          data-end-date="{{ full_end_datetime }}"
          data-expired-message="{{ section.settings.expired_message | default: 'Offre terminée !' }}"
        >
          <div class="countdown-unit">
            <span class="countdown-number" data-days>00</span>
            <span class="countdown-label">Jours</span>
          </div>
          <div class="countdown-separator">:</div>
          <div class="countdown-unit">
            <span class="countdown-number" data-hours>00</span>
            <span class="countdown-label">Heures</span>
          </div>
          <div class="countdown-separator">:</div>
          <div class="countdown-unit">
            <span class="countdown-number" data-minutes>00</span>
            <span class="countdown-label">Min</span>
          </div>
          <div class="countdown-separator">:</div>
          <div class="countdown-unit">
            <span class="countdown-number countdown-number--seconds" data-seconds>00</span>
            <span class="countdown-label">Sec</span>
          </div>
        </div>
        
        {%- if section.settings.discount_code != blank -%}
          <div class="countdown-code-container">
            <p class="countdown-code-label">{{ section.settings.code_label | default: 'Utilisez le code :' }}</p>
            <div class="countdown-code" data-copy-code>
              <span class="countdown-code-text">{{ section.settings.discount_code }}</span>
              <button type="button" class="countdown-code-copy" aria-label="Copier le code">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              </button>
            </div>
          </div>
        {%- endif -%}
        
        {%- if section.settings.cta_text != blank -%}
          <div class="countdown-cta">
            <a href="{{ section.settings.cta_link }}" class="button button--primary countdown-button">
              {{ section.settings.cta_text }}
            </a>
          </div>
        {%- endif -%}
        
        {%- if section.settings.show_urgency_bar -%}
          <div class="countdown-urgency">
            <div class="countdown-urgency-bar">
              <div class="countdown-urgency-fill" style="width: {{ section.settings.urgency_percentage }}%;"></div>
            </div>
            <p class="countdown-urgency-text">{{ section.settings.urgency_text | default: 'Stock limité - Ne manquez pas cette offre !' }}</p>
          </div>
        {%- endif -%}
        
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
