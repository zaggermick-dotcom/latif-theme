      "default": "⚡ OFFRE LIMITÉE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Vente Flash : -30% sur tout le site"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Taille du titre",
      "options": [
        { "value": "h3", "label": "Petit" },
        { "value": "h2", "label": "Moyen" },
        { "value": "h1", "label": "Grand" }
