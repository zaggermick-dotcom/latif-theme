{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{%- liquid
  for block in section.blocks
    if block.type == "custom_typo"
      render 'block-custom-typo', block: block
    endif
  endfor
  
  assign media_type = section.settings.media_type
  if media_type == 'image'
    assign image_to_ratio = section.settings.image
  else
    assign image_to_ratio = section.settings.video.preview_image
  endif
  assign image_class = 'media--image'
  if section.settings.video != blank
    assign image_class = 'media--image media--hide'
    assign video_class = 'media--video'
  endif
  assign layout_style = section.settings.layout_style
  
  assign blockImage = false
  assign suppImage = 0
  for block in section.blocks
    if block.type == 'image'
      assign blockImage = true
    elsif block.type == 'more_image'
      assign suppImage = suppImage | plus: 1
    endif
  endfor
  
  assign bgImage = section.settings.image_bg_colored
  assign bgImageMobile = section.settings.image_bg_colored_mobile
  if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank
    render 'cut-colored'
  endif
-%}

{%- style -%}  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  {%- if section.settings.hide_mobile -%}
    @media screen and (max-width: 749px) {
      .section-{{ section.id }}-padding { display: none; }
    }
  {%- endif -%}

  {%- if section.settings.height == "adapt" -%}
    .section-{{ section.id }}-padding .image-with-text__superposition {
      padding-bottom: {{ 1 | divided_by: image_to_ratio.aspect_ratio | times: 100 }}%;
    }
  {%- endif -%}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      {%- if section.settings.hide_desktop -%}
        display: none;
      {%- endif -%}
    }

    {%- if section.settings.height == "adapt" -%}
      .section-{{ section.id }}-padding .image-with-text__superposition {
        padding-bottom: {{ 1 | divided_by: image_to_ratio.aspect_ratio | times: 50 }}%;
      }
    {%- endif -%}
  }

  .image-with-text__text-container {
    margin: 0 auto;
  }

  {% if section.settings.make_square %}
    .image-with-text__media .media--image {
      border-radius: 0 !important;
    }  
  {% endif %}
{%- endstyle -%}

{%- render 'separator-top', section: section -%}

{%- capture image -%}
  <div
    class="image-with-text__media image-with-text__media--{{ section.settings.height }} global-media-settings {% if section.settings.image != blank or section.settings.video != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %} {% if section.settings.make_square %} border-radius--null {% endif %}"
    {% if section.settings.height == 'adapt' %}
      {% if section.settings.image != blank or section.settings.video != blank and suppImage == 0 %}
        style="padding-bottom: {{ 1 | divided_by: image_to_ratio.aspect_ratio | times: 100 }}%;"
      {% endif -%}
    {% endif %}
  >
    {%- if section.settings.image != blank and media_type == 'image' -%}
      {%- capture sizes -%}
        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
      {%- endcapture -%}
      {{
        section.settings.image
        | image_url: width: 1500
        | image_tag: loading: 'lazy', class: image_class, sizes: sizes, widths: '535, 750, 1070, 1500'
      }}
    {%- else -%}
      {%- if media_type == 'image' or section.settings.video == blank -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    {%- endif -%}

    {%- if media_type == 'video' and section.settings.video != blank -%}
      {{
        section.settings.video
        | video_tag:
          class: video_class,
          image_size: '1100x',
          autoplay: true,
          loop: true,
          controls: false,
          muted: true
      }}
    {%- endif -%}
  </div>

  {%- for block in section.blocks -%}
    {%- if block.type == 'more_image' -%}
      <div
        class="image-with-text__media image-with-text__media--supplementary image-with-text__media--{{ section.settings.height }} global-media-settings {% if block.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %} {% if section.settings.make_square %} border-radius--null {% endif %}"
      >
        {%- if block.settings.image != blank -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
          {{
            block.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', class: image_class, sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
{%- endcapture -%}

<div id="{{ section.settings.section_id }}" class="color-{{ section.settings.color_palette }} section-{{ section.id }}-padding{% if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank %} cut-colored-section{% endif %}">
  <div class="image-with-text container container--{{ section.settings.layout_width }}">
    {%- liquid
      for block in section.blocks
        if block.type == "picto"
          render "pictogram", block: block
        endif
      endfor
    -%}
    
    <div
      class="
        image-with-text__grid grid grid--1-col
        image-with-text__grid--{{ section.settings.layout_style }}
        {% if section.settings.remove_gap %} grid--gapless {% endif %}
        grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}
        {% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse {% endif %}
        image-with-text__media-item--{{ section.settings.desktop_image_width }}
      "
    >
      <div
        class="
          image-with-text__media-item
          image-with-text__media-superposition--{{ section.settings.height }}
          image-with-text__media-item--{{ media_type }}
          image-with-text__media-item--{{ section.settings.desktop_content_position }}
          grid__item{% if suppImage > 0 %} image-with-text__superposition superposition-{{ suppImage }}{% endif %}
          {% if section.settings.make_square %} border-radius--null {% endif %}
          {% if blockImage == true -%}image-with-text__media-desktop{%- endif -%}
        "
      >
        {{ image }}
      </div>
      <div class="image-with-text__text-item grid__item {% if section.settings.layout_width == "full" %}padding--null{% endif %}">
        <div
          id="ImageWithText--{{ section.id }}"
          class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} {% if layout_style == "card" %} content-container{% endif %}{% if section.settings.make_square %} border-radius--null {% endif %}"
        >
          <div class="image-with-text__text-container" style="max-width: {{ section.settings.text_container_max_width }}px">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'image' -%}
                <div
                  class="
                    image-with-text__media-item
                    image-with-text__media-superposition--{{ section.settings.height }}
                    image-with-text__media-item--{{ media_type }}
                    image-with-text__media-item--{{ section.settings.desktop_content_position }}
                    {% if section.settings.make_square %} border-radius--null {% endif %}
                    grid__item{% if suppImage > 0 %} image-with-text__superposition superposition-{{ suppImage }}{% endif %}
                    {% if blockImage == true -%}image-with-text__media-mobile{%- endif -%}
                  "
                  {%- render 'animation',
                    enable_animations: section.settings.enable_animations,
                    animation: section.settings.animation
                  -%}
                >
                  {{ image }}
                </div>

              {%- when 'heading' -%}
                {%- render 'heading',
                  enable_animations: section.settings.enable_animations,
                  animation: section.settings.animation,
                  icon: block.settings.icon,
                  icon_custom: block.settings.icon_custom,
                  heading: block.settings.heading,
                  heading_class: 'image-with-text__heading',
                  heading_style: block.settings.heading_style,
                  forced_heading_level: block.settings.heading_level
                -%}
              
              {%- when 'subheading' -%}
                {%- render 'heading',
                  enable_animations: section.settings.enable_animations,
                  animation: section.settings.animation,
                  subheading: block.settings.subheading,
                  color: block.settings.color
                -%}

              {%- when 'text' -%}
                <div
                  class="image-with-text__text image-with-text__bold-{{ block.settings.color_bold_words }} rte"
                  {%- render 'animation',
                    enable_animations: section.settings.enable_animations,
                    animation: section.settings.animation
                  -%}
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.description }}
                </div>

              {%- when 'timer' -%}
                <div 
                  class="image-with-text__timer timer__block" {{ block.shopify_attributes }}
                  {%- render "animation", 
                     enable_animations: section.settings.enable_animations, 
                     animation: section.settings.animation 
                  -%}
                >
                  {%- render 'timer', show_animations: true, timer_style: block.settings.timer_style, timer_text: block.settings.text -%}
                </div>

              {%- when 'icons' -%}
                <div
                  class="image-with-text__icons image-with-text__text image-with-text__icons--{{ block.settings.icons_style }}"
                  {{ block.shopify_attributes }}
                >
                  {%- render 'block-icons',
                    enable_animations: section.settings.enable_animations,
                    animation: section.settings.animation,
                    block: block
                  -%}
                </div>
              
              {%- comment -%} NOUVEAU BLOC : Note Trustpilot {%- endcomment -%}
              {%- when 'trustpilot' -%}
                <div class="image-with-text__trustpilot" {{ block.shopify_attributes }} style="margin-top: 1rem; margin-bottom: 1rem;">
                  <div style="display:flex; align-items:center; gap: 10px; flex-wrap: wrap; {% if section.settings.desktop_content_alignment == 'center' %}justify-content:center;{% elsif section.settings.desktop_content_alignment == 'right' %}justify-content:flex-end;{% endif %}">
                    {%- if block.settings.tp_image != blank -%}
                      {{ block.settings.tp_image | image_url: width: 120 | image_tag: loading: 'lazy', style: 'object-fit: contain;' }}
                    {%- else -%}
                      <div style="color: {{ block.settings.star_color }}; font-size: 1.2rem; letter-spacing: 2px;">★★★★★</div>
                    {%- endif -%}
                    
                    {%- if block.settings.tp_text != blank -%}
                      <span style="font-size: 0.9rem; font-weight: bold; opacity: 0.9;">{{ block.settings.tp_text }}</span>
                    {%- endif -%}
                  </div>
                </div>

              {%- comment -%} NOUVEAU BLOC : Badge de confiance {%- endcomment -%}
              {%- when 'trust_badge' -%}
                <div class="image-with-text__trust-badge" {{ block.shopify_attributes }} style="margin-top: 1rem; margin-bottom: 1rem;">
                  {%- if block.settings.badge_heading != blank -%}
                    <p style="margin-bottom: 0.5rem; font-size: 0.9em; opacity: 0.8;">{{ block.settings.badge_heading }}</p>
                  {%- endif -%}
                  {%- if block.settings.badge_image != blank -%}
                    <img 
                      src="{{ block.settings.badge_image | image_url: width: 600 }}"
                      alt="{{ block.settings.badge_image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.badge_image.width }}"
                      height="{{ block.settings.badge_image.height }}"
                      style="width: {{ block.settings.badge_width }}%; height: auto; max-width: 100%; display: block; {% if section.settings.desktop_content_alignment == 'center' %}margin: 0 auto;{% elsif section.settings.desktop_content_alignment == 'right' %}margin-left: auto;{% endif %}"
                    >
                  {%- else -%}
                    {%- comment -%} Placeholder visible si aucune image n'est choisie {%- endcomment -%}
                    <div style="width: {{ block.settings.badge_width }}%; max-width: 300px; {% if section.settings.desktop_content_alignment == 'center' %}margin: 0 auto;{% elsif section.settings.desktop_content_alignment == 'right' %}margin-left: auto;{% endif %}">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>

              {%- when 'button' -%}
                <div class="button__container image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }}">
                  <div class="banner__content-buttons image-with-text__buttons" {{ block.shopify_attributes }}
                    {%- render "animation", enable_animations: section.settings.enable_animations, animation: section.settings.animation -%}>
                    
                    <a href="{{ block.settings.button_link }}" class="button button__style--{{ block.settings.button_style }}">
                      {{ block.settings.button_text }}
                    </a>
                    
                    {%- if block.settings.button_text_secondary != blank and block.settings.button_link_secondary != blank -%}
                      <a href="{{ block.settings.button_link_secondary }}" 
                        class="button button__style--{{ block.settings.button_style_secondary }}">
                        {{ block.settings.button_text_secondary }}
                      </a>
                    {%- endif -%}
                  </div>

                  <div {% render "animation", enable_animations: section.settings.enable_animations, animation: section.settings.animation %}>
                    {%- liquid
                      if block.settings.extra_button
                        render 'extra-button', unique: section.id
                      endif
                    -%}
                  </div>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

{% schema %}
{
  "name": "Image avec texte (Custom)",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.image-with-text.video.content"
    },
    {
      "type": "text",
      "id": "section_id",
      "label": "t:sections.global.section_id"
    },
    {
      "type": "header",
      "content": "t:sections.global.headers.media"
    },
    {
      "type": "select",
      "id": "media_type",
      "options": [
        {
          "value": "image",
          "label": "t:sections.image-with-text.settings.media_type.options__1.label"
        },
        {
          "value": "video",
          "label": "t:sections.image-with-text.settings.media_type.options__2.label"
        }
      ],
      "default": "image",
      "label": "t:sections.image-with-text.settings.media_type.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label",
      "visible_if": "{{ section.settings.media_type == 'image' }}"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.image-with-text.settings.video.label",
      "visible_if": "{{ section.settings.media_type == 'video' }}"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image-with-text.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.height.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.image-with-text.settings.height.label"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.image-with-text.settings.desktop_image_width.label",
      "info": "t:sections.image-with-text.settings.desktop_image_width.info"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.image-with-text.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.image-with-text.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.image-with-text.settings.layout.label",
      "info": "t:sections.image-with-text.settings.layout.info"
    },
    {
      "type": "select",
      "id": "layout_style",
      "options": [
        {
          "value": "normal",
          "label": "t:sections.image-with-text.settings.layout_style.options.normal"
        },
        {
          "value": "card",
          "label": "t:sections.image-with-text.settings.layout_style.options.card"
        }
      ],
      "default": "normal",
      "label": "t:sections.image-with-text.settings.layout_style.label"
    },
    {
      "type": "checkbox",
      "id": "remove_gap",
      "label": "t:sections.image-with-text.settings.remove_gap.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "make_square",
      "label": "t:sections.image-with-text.settings.make_square.label",
      "info": "t:sections.image-with-text.settings.make_square.info",
      "default": false
    },
    {
      "type": "range",
      "id": "text_container_max_width",
      "min": 300,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "t:sections.image-with-text.settings.text_container_width.label",
      "default": 700
    },
    {
      "type": "header",
      "content": "t:sections.global.headers.text"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "top",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__1.label"
        },
        {
          "value": "middle",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__2.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__3.label"
        }
      ],
      "default": "middle",
      "label": "t:sections.image-with-text.settings.desktop_content_position.label"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.desktop_content_alignment.label"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "mobile_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.mobile_content_alignment.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.headers.animations"
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "t:sections.global.animation.enable",
      "default": true
    },
    {
      "type": "select",
      "id": "animation",
      "options": [
        {
          "value": "fade-up",
          "label": "t:sections.global.animation.options.fade_up"
        },
        {
          "value": "fade-down",
          "label": "t:sections.global.animation.options.fade_down"
        },
        {
          "value": "fade-right",
          "label": "t:sections.global.animation.options.fade_right"
        },
        {
          "value": "fade-left",
          "label": "t:sections.global.animation.options.fade_left"
        },
        {
          "value": "zoom-in",
          "label": "t:sections.global.animation.options.zoom_in"
        },
        {
          "value": "zoom-out",
          "label": "t:sections.global.animation.options.zoom_out"
        }
      ],
      "default": "fade-up",
      "label": "t:sections.global.animation.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.headers.layout"
    },
    {
      "type": "checkbox",
      "id": "hide_desktop",
      "label": "t:sections.global.hide_desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "t:sections.global.hide_mobile",
      "default": false
    },
    {
      "type": "select",
      "id": "layout_width",
      "options": [
        {
          "value": "narrow",
          "label": "t:sections.global.layout_width.options.page_width_narrow"
        },
        {
          "value": "normal",
          "label": "t:sections.global.layout_width.options.page_width"
        },
        {
          "value": "full-padded",
          "label": "t:sections.global.layout_width.options.full_width_padded"
        },
        {
          "value": "full",
          "label": "t:sections.global.layout_width.options.full_width"
        }
      ],
      "default": "normal",
      "label": "t:sections.global.layout_width.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.padding_top.label",
      "default": 0,
      "visible_if": "{{ section.settings.hide_desktop == false }}"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.padding_bottom.label",
      "default": 64,
      "visible_if": "{{ section.settings.hide_desktop == false }}"
    },
    {
      "type": "range",
      "id": "padding_top_sm",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.padding_top_sm.label",
      "default": 0,
      "visible_if": "{{ section.settings.hide_mobile == false }}"
    },
    {
      "type": "range",
      "id": "padding_bottom_sm",
