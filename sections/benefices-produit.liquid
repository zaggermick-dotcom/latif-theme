<section class="benefices-cro page-width">
  <div class="benefices-wrapper">
    <h2 class="benefices-heading">{{ section.settings.title }}</h2>
    <p class="benefices-subheading">{{ section.settings.subtitle }}</p>
    
    <div class="benefices-list">
      {% for block in section.blocks %}
        <div class="benefice-card" {{ block.shopify_attributes }}>
          <span class="benefice-icon">{{ block.settings.icon }}</span>
          <div class="benefice-text">
            <strong class="benefice-title">{{ block.settings.title }}</strong>
            <span class="benefice-desc">{{ block.settings.description }}</span>
