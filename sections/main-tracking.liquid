     LATIF SKIN - TRACKING PREMIUM STYLES
     ======================================== */
  
  .latif-tracking-container {
    max-width: 900px;
    margin: 0 auto;
    font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  .latif-tracking-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .latif-tracking-header h1 {
    font-size: 42px;
    font-weight: 300;
    color: #1a1a1a;
    margin-bottom: 15px;
    letter-spacing: -0.5px;
  }

  .latif-tracking-header p {
    font-size: 16px;
    color: #666;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Trust Badges */
  .latif-tracking-trust {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin: 30px 0;
    flex-wrap: wrap;
  }

  .latif-trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #666;
  }

  .latif-trust-item span {
    font-size: 20px;
  }

  /* Search Box */
  .latif-tracking-search {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 24px;
    padding: 50px 40px;
    margin-bottom: 40px;
  }

  .latif-tracking-search-title {
    text-align: center;
    margin-bottom: 30px;
  }

  .latif-tracking-search-title h2 {
    font-size: 24px;
    font-weight: 400;
    color: #fff;
    margin-bottom: 10px;
  }

  .latif-tracking-search-title p {
    font-size: 14px;
    color: #999;
  }

  .latif-tracking-input-wrapper {
    display: flex;
    gap: 15px;
    max-width: 600px;
    margin: 0 auto;
  }

  .latif-tracking-input-container {
    flex: 1;
    position: relative;
  }

  .latif-tracking-input {
    width: 100%;
    padding: 18px 25px 18px 50px;
    background: rgba(255,255,255,0.08);
    border: 2px solid rgba(255,255,255,0.15);
    border-radius: 50px;
    font-size: 16px;
    color: #fff;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .latif-tracking-input:focus {
    outline: none;
    border-color: #c9a87c;
    background: rgba(255,255,255,0.12);
    box-shadow: 0 0 0 4px rgba(201, 168, 124, 0.2);
  }

  .latif-tracking-input::placeholder {
    color: #888;
  }

  .latif-tracking-input-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 20px;
    opacity: 0.6;
  }

  .latif-tracking-btn {
    padding: 18px 35px;
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    color: #1a1a1a;
    border: none;
    border-radius: 50px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .latif-tracking-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(201, 168, 124, 0.4);
  }

  .latif-tracking-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  /* Timeline */
  .latif-tracking-timeline {
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    border-radius: 24px;
    padding: 40px;
    margin-bottom: 40px;
    border: 1px solid #eee;
    display: none;
  }

  .latif-tracking-timeline.active {
    display: block;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .latif-timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
    flex-wrap: wrap;
    gap: 15px;
  }

  .latif-timeline-status {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .latif-timeline-status-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
  }

  .latif-timeline-status-text h3 {
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 5px 0;
  }

  .latif-timeline-status-text p {
    font-size: 13px;
    color: #888;
    margin: 0;
  }

  .latif-timeline-tracking-number {
    background: rgba(201, 168, 124, 0.15);
    padding: 10px 20px;
    border-radius: 50px;
    font-size: 13px;
    color: #1a1a1a;
    font-weight: 500;
  }

  /* Progress Bar */
  .latif-timeline-progress {
    margin-bottom: 40px;
  }

  .latif-timeline-progress-bar {
    height: 6px;
    background: #e0e0e0;
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .latif-timeline-progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #c9a87c 0%, #d4b896 100%);
    border-radius: 3px;
    transition: width 1s ease;
    width: 0%;
  }

  .latif-timeline-steps {
    display: flex;
    justify-content: space-between;
  }

  .latif-timeline-step {
    text-align: center;
    flex: 1;
    position: relative;
  }

  .latif-timeline-step-icon {
    width: 45px;
    height: 45px;
    background: #e0e0e0;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 10px;
    font-size: 18px;
    transition: all 0.3s ease;
    color: #888;
  }

  .latif-timeline-step.completed .latif-timeline-step-icon {
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    color: #fff;
  }

  .latif-timeline-step.active .latif-timeline-step-icon {
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    color: #fff;
    box-shadow: 0 0 0 4px rgba(201, 168, 124, 0.3);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { box-shadow: 0 0 0 4px rgba(201, 168, 124, 0.3); }
    50% { box-shadow: 0 0 0 8px rgba(201, 168, 124, 0.1); }
  }

  .latif-timeline-step-label {
    font-size: 12px;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
  }

  .latif-timeline-step.completed .latif-timeline-step-label,
  .latif-timeline-step.active .latif-timeline-step-label {
    color: #1a1a1a;
  }

  .latif-timeline-step-date {
    font-size: 11px;
    color: #aaa;
  }

  /* Map Section */
  .latif-tracking-map {
    background: #fff;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 30px;
    border: 1px solid #eee;
  }

  .latif-tracking-map-header {
    padding: 20px 25px;
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .latif-tracking-map-header span {
    font-size: 20px;
  }

  .latif-tracking-map-header h4 {
    font-size: 16px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
  }

  .latif-tracking-map-container {
    height: 300px;
    background: #f0f0f0;
    position: relative;
  }

  .latif-tracking-map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .latif-tracking-map-location {
    padding: 20px 25px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 15px;
  }

  .latif-tracking-map-location-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .latif-tracking-map-location-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
  }

  .latif-tracking-map-location-text h5 {
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 3px 0;
  }

  .latif-tracking-map-location-text p {
    font-size: 12px;
    color: #888;
    margin: 0;
  }

  .latif-tracking-map-updated {
    font-size: 12px;
    color: #888;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .latif-tracking-map-updated span {
    color: #4ade80;
  }

  /* Events List */
  .latif-tracking-events {
    background: #fff;
    border-radius: 20px;
    padding: 25px;
    border: 1px solid #eee;
  }

  .latif-tracking-events-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #eee;
  }

  .latif-tracking-events-header span {
    font-size: 20px;
  }

  .latif-tracking-events-header h4 {
    font-size: 16px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
  }

  .latif-tracking-event {
    display: flex;
    gap: 15px;
    padding: 15px 0;
    border-bottom: 1px solid #f5f5f5;
  }

  .latif-tracking-event:last-child {
    border-bottom: none;
  }

  .latif-tracking-event-dot {
    width: 12px;
    height: 12px;
    background: #e0e0e0;
    border-radius: 50%;
    margin-top: 5px;
    flex-shrink: 0;
  }

  .latif-tracking-event:first-child .latif-tracking-event-dot {
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    box-shadow: 0 0 0 4px rgba(201, 168, 124, 0.2);
  }

  .latif-tracking-event-content h5 {
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 5px 0;
  }

  .latif-tracking-event-content p {
    font-size: 13px;
    color: #888;
    margin: 0 0 5px 0;
  }

  .latif-tracking-event-content time {
    font-size: 12px;
    color: #aaa;
  }

  /* 17track Container Override */
  #YQContainer {
    margin-top: 30px;
    background: #fff;
    border-radius: 20px;
    padding: 25px;
    border: 1px solid #eee;
  }

  /* Loading State */
  .latif-tracking-loading {
    text-align: center;
    padding: 60px 20px;
    display: none;
  }

  .latif-tracking-loading.active {
    display: block;
  }

  .latif-tracking-spinner {
    width: 50px;
    height: 50px;
    border: 3px solid #eee;
    border-top-color: #c9a87c;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 20px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .latif-tracking-loading p {
    font-size: 16px;
    color: #666;
  }

  /* Error State */
  .latif-tracking-error {
    text-align: center;
    padding: 40px 20px;
    background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
    border-radius: 20px;
    border: 1px solid #ffcdd2;
    display: none;
  }

  .latif-tracking-error.active {
    display: block;
  }

  .latif-tracking-error-icon {
    font-size: 48px;
    margin-bottom: 15px;
  }

  .latif-tracking-error h3 {
    font-size: 18px;
    font-weight: 600;
    color: #c62828;
    margin-bottom: 10px;
  }

  .latif-tracking-error p {
    font-size: 14px;
    color: #666;
    margin-bottom: 20px;
  }

  .latif-tracking-error-btn {
    display: inline-block;
    padding: 12px 25px;
    background: #1a1a1a;
    color: #fff;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .latif-tracking-error-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0,0,0,0.2);
  }

  /* Help Section */
  .latif-tracking-help {
    background: linear-gradient(135deg, #f8f4ef 0%, #f5f0e8 100%);
    border-radius: 20px;
    padding: 40px;
    margin-top: 50px;
    text-align: center;
  }

  .latif-tracking-help h3 {
    font-size: 22px;
    font-weight: 400;
    color: #1a1a1a;
    margin-bottom: 15px;
  }

  .latif-tracking-help p {
    font-size: 15px;
    color: #666;
    margin-bottom: 25px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .latif-tracking-help-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .latif-tracking-help-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 50px;
    color: #1a1a1a;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .latif-tracking-help-btn:hover {
    background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%);
    border-color: #c9a87c;
    color: #fff;
    transform: translateY(-2px);
  }

  .latif-tracking-help-btn span {
    font-size: 18px;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .latif-tracking-header h1 {
      font-size: 32px;
    }

    .latif-tracking-search {
      padding: 30px 20px;
    }

    .latif-tracking-input-wrapper {
      flex-direction: column;
    }

    .latif-tracking-btn {
      width: 100%;
    }

    .latif-timeline-steps {
      flex-wrap: wrap;
      gap: 20px;
    }

    .latif-timeline-step {
      flex: none;
      width: calc(50% - 10px);
    }

    .latif-tracking-timeline {
      padding: 25px 20px;
    }

    .latif-timeline-header {
      flex-direction: column;
      text-align: center;
    }

    .latif-tracking-map-location {
      flex-direction: column;
      text-align: center;
    }

    .latif-tracking-help {
      padding: 30px 20px;
    }
  }
{%- endstyle -%}

