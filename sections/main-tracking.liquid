<script type="text/javascript">
  // LATIF SKIN - Premium Tracking Script
  
  let map = null;
  let marker = null;

  // Main tracking function
  function doTrackLatif() {
    const num = document.getElementById('YQNum').value.trim();
    
    if (!num) {
      alert('Veuillez entrer un num√©ro de suivi');
      return;
    }

    // Show loading
    document.getElementById('latifTrackingLoading').classList.add('active');
    document.getElementById('latifTrackingTimeline').classList.remove('active');
    document.getElementById('latifTrackingError').classList.remove('active');

    // Update tracking number display
    document.getElementById('latifTrackingNumber').textContent = num;

    // Call 17track API
    YQV5.trackSingle({
      YQ_ContainerId: 'YQContainer',
      YQ_Lang: '{{ shop.locale }}',
      YQ_Num: num,
      YQ_Fc: function(data) {
        handleTrackingData(data, num);
      }
    });

    // Fallback timeout (if 17track doesn't respond)
    setTimeout(() => {
      const loading = document.getElementById('latifTrackingLoading');
      if (loading.classList.contains('active')) {
        // Check if YQContainer has content
        const container = document.getElementById('YQContainer');
        if (container.innerHTML.trim() !== '') {
          // 17track responded but callback didn't fire, parse manually
          parseYQContainer(num);
        } else {
          showError();
        }
      }
    }, 10000);
  }

  // Handle tracking data from 17track
  function handleTrackingData(data, trackingNum) {
    document.getElementById('latifTrackingLoading').classList.remove('active');

    if (!data || data.length === 0 || !data[0].found) {
      showError();
      return;
    }

    const trackInfo = data[0];
    showTimeline(trackInfo, trackingNum);
  }

  // Parse YQContainer manually (fallback)
  function parseYQContainer(trackingNum) {
    document.getElementById('latifTrackingLoading').classList.remove('active');
    
    const container = document.getElementById('YQContainer');
    const hasData = container.querySelector('.yq-detail-item') || container.innerHTML.length > 100;
    
    if (hasData) {
      // Show timeline with default data, real data is in YQContainer
      showTimelineDefault(trackingNum);
      // Also show the original 17track data
      container.style.display = 'block';
    } else {
      showError();
    }
  }

  // Show timeline with tracking data
  function showTimeline(trackInfo, trackingNum) {
    const timeline = document.getElementById('latifTrackingTimeline');
    timeline.classList.add('active');

    // Determine status
    const status = trackInfo.status || 0;
    let statusIcon = 'üì¶';
    let statusTitle = 'En cours de traitement';
    let statusSubtitle = 'Votre commande est en pr√©paration';
    let progress = 25;
    let activeStep = 1;

    // Status codes from 17track
    // 0: Not found, 10: In transit, 20: Expired, 30: Pick up, 35: Undelivered, 40: Delivered, 50: Alert
    
    if (status >= 40) {
      statusIcon = '‚úÖ';
      statusTitle = 'Livr√©';
      statusSubtitle = 'Votre colis a √©t√© livr√© avec succ√®s';
      progress = 100;
      activeStep = 4;
    } else if (status >= 30) {
      statusIcon = 'üöö';
      statusTitle = 'En livraison';
      statusSubtitle = 'Le livreur est en route vers vous';
      progress = 85;
      activeStep = 4;
    } else if (status >= 10) {
      statusIcon = '‚úàÔ∏è';
      statusTitle = 'En transit';
      statusSubtitle = 'Votre colis voyage vers sa destination';
      progress = 60;
      activeStep = 3;
    } else {
      statusIcon = 'üì¶';
      statusTitle = 'Exp√©di√©';
      statusSubtitle = 'Votre colis a quitt√© notre entrep√¥t';
      progress = 35;
      activeStep = 2;
    }

    // Update status display
    document.getElementById('latifStatusIcon').textContent = statusIcon;
    document.getElementById('latifStatusTitle').textContent = statusTitle;
    document.getElementById('latifStatusSubtitle').textContent = statusSubtitle;

    // Update progress bar
    document.getElementById('latifProgressFill').style.width = progress + '%';

    // Update steps
    updateSteps(activeStep);

    // Update events list
    if (trackInfo.track && trackInfo.track.length > 0) {
      updateEventsList(trackInfo.track);
      
      // Update map with last location
      const lastEvent = trackInfo.track[0];
      if (lastEvent.z) {
        updateMap(lastEvent.z, lastEvent.a || '', lastEvent.b || new Date().toISOString());
      }
    }

    // Show original 17track data too
    document.getElementById('YQContainer').style.display = 'block';
  }

  // Show timeline with default appearance (when we can't parse 17track data)
  function showTimelineDefault(trackingNum) {
    const timeline = document.getElementById('latifTrackingTimeline');
    timeline.classList.add('active');

    document.getElementById('latifStatusIcon').textContent = 'üì¶';
    document.getElementById('latifStatusTitle').textContent = 'Suivi en cours';
    document.getElementById('latifStatusSubtitle').textContent = 'Les d√©tails sont affich√©s ci-dessous';
    document.getElementById('latifProgressFill').style.width = '50%';
    
    updateSteps(2);

    // Default map location (Montreal - LATIF SKIN HQ)
    updateMap('Montreal, Canada', 'Exp√©di√© depuis notre entrep√¥t', new Date().toISOString());
  }

  // Update timeline steps
  function updateSteps(activeStep) {
    for (let i = 1; i <= 4; i++) {
      const step = document.getElementById('step' + i);
      step.classList.remove('completed', 'active');
      
      if (i < activeStep) {
        step.classList.add('completed');
      } else if (i === activeStep) {
        step.classList.add('active');
      }
    }
  }

  // Update events list
  function updateEventsList(events) {
    const container = document.getElementById('latifEventsList');
    container.innerHTML = '';

    events.slice(0, 10).forEach((event, index) => {
      const eventEl = document.createElement('div');
      eventEl.className = 'latif-tracking-event';
      
      const date = new Date(event.a || event.b);
      const formattedDate = date.toLocaleDateString('fr-FR', {
        day: 'numeric',
        month: 'long',
        year: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });

      eventEl.innerHTML = `
        <div class="latif-tracking-event-dot"></div>
        <div class="latif-tracking-event-content">
          <h5>${event.z || 'Mise √† jour'}</h5>
          <p>${event.c || '-'}</p>
          <time>${formattedDate}</time>
        </div>
      `;
      
      container.appendChild(eventEl);
    });
  }

  // Update map with location
  function updateMap(location, description, timestamp) {
    const mapContainer = document.getElementById('latifMapContainer');
    
    // Update location text
    const parts = location.split(',');
    document.getElementById('latifLocationCity').textContent = parts[0] ? parts[0].trim() : location;
    document.getElementById('latifLocationCountry').textContent = parts[1] ? parts[1].trim() : '';
    
    // Update timestamp
    const date = new Date(timestamp);
    const timeAgo = getTimeAgo(date);
    document.getElementById('latifLastUpdate').textContent = timeAgo;

    // Initialize map with Leaflet + OpenStreetMap (Free)
    if (typeof L !== 'undefined') {
      // Geocode location
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(location)}`)
        .then(response => response.json())
        .then(data => {
          if (data && data.length > 0) {
            const lat = parseFloat(data[0].lat);
            const lon = parseFloat(data[0].lon);
            
            if (map) {
              map.remove();
            }
            
            map = L.map(mapContainer).setView([lat, lon], 10);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: '¬© OpenStreetMap'
            }).addTo(map);
            
            // Custom marker
            const customIcon = L.divIcon({
              className: 'latif-map-marker',
              html: '<div style="background: linear-gradient(135deg, #c9a87c 0%, #d4b896 100%); width: 30px; height: 30px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 16px; box-shadow: 0 4px 15px rgba(201,168,124,0.5);">üì¶</div>',
              iconSize: [30, 30],
              iconAnchor: [15, 15]
            });
            
            marker = L.marker([lat, lon], { icon: customIcon }).addTo(map);
            marker.bindPopup(`<strong>${location}</strong><br>${description}`).openPopup();
          }
        })
        .catch(() => {
          // Fallback: show static image
          mapContainer.innerHTML = `
            <div style="height: 100%; display: flex; align-items: center; justify-content: center; flex-direction: column; background: linear-gradient(135deg, #f8f4ef 0%, #f5f0e8 100%);">
              <div style="font-size: 48px; margin-bottom: 15px;">üìç</div>
              <div style="font-size: 18px; font-weight: 600; color: #1a1a1a;">${location}</div>
              <div style="font-size: 14px; color: #888; margin-top: 5px;">${description}</div>
            </div>
          `;
        });
    } else {
      // Leaflet not loaded, show fallback
      mapContainer.innerHTML = `
        <div style="height: 100%; display: flex; align-items: center; justify-content: center; flex-direction: column; background: linear-gradient(135deg, #f8f4ef 0%, #f5f0e8 100%);">
          <div style="font-size: 48px; margin-bottom: 15px;">üìç</div>
          <div style="font-size: 18px; font-weight: 600; color: #1a1a1a;">${location}</div>
          <div style="font-size: 14px; color: #888; margin-top: 5px;">${description}</div>
        </div>
      `;
    }
  }

  // Get time ago string
  function getTimeAgo(date) {
    const now = new Date();
    const diff = now - date;
    const minutes = Math.floor(diff / 60000);
    const hours = Math.floor(diff / 3600000);
    const days = Math.floor(diff / 86400000);

    if (minutes < 60) return `il y a ${minutes} min`;
    if (hours < 24) return `il y a ${hours}h`;
    return `il y a ${days} jour${days > 1 ? 's' : ''}`;
  }

  // Show error state
  function showError() {
    document.getElementById('latifTrackingLoading').classList.remove('active');
    document.getElementById('latifTrackingTimeline').classList.remove('active');
    document.getElementById('latifTrackingError').classList.add('active');
  }

  // Enter key support
  document.addEventListener('DOMContentLoaded', function() {
    const input = document.getElementById('YQNum');
    if (input) {
      input.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          doTrackLatif();
        }
      });
    }
  });
</script>

